<odoo>

    <record model="ir.ui.view" id="survey_question_by_default_form_view">
        <field
            name="name"
        >survey.question.by.default.form (in mozaik_survey_question_involvement_category)</field>
        <field name="model">survey.question.by.default</field>
        <field
            name="inherit_id"
            ref="mozaik_survey_mandatory_questions.survey_question_by_default_view_form"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='suggested_answer_ids']/tree/field[@name='value']"
                position="after"
            >
                <field
                    name="involvement_category_id"
                    attrs="{'column_invisible': [('parent.question_type', 'not in', ['simple_choice', 'multiple_choice'])]}"
                />
            </xpath>
        </field>
    </record>



</odoo>
