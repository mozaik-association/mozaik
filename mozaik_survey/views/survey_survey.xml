<odoo>

    <record model="ir.ui.view" id="survey_survey_form_view">
        <field name="name">survey.survey.form (in mozaik_survey)</field>
        <field name="model">survey.survey</field>
        <field name="inherit_id" ref="survey.survey_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='active']" position="before">
                    <field name="interest_ids" widget="many2many_tags" />
            </xpath>
            <xpath expr="//group[@name='scoring']" position="after">
                <group string="Publication" name="publication">
                    <field name="publish_date" />
                </group>
            </xpath>
        </field>
    </record>

</odoo>
