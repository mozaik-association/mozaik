<odoo>

    <record model="ir.ui.view" id="survey_export_csv_wizard">
        <field
            name="name"
        >survey.export.csv.wizard (in mozaik_survey_export_csv)</field>
        <field name="model">survey.export.csv</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <p>
                        This wizard will export all answers to this survey into a CSV file.
                    </p>
                    <field
                        name="export_file"
                        nolabel="1"
                        readonly="1"
                        filename="export_filename"
                    />
                    <field name="export_filename" invisible="1" />
                </group>
                <footer>
                    <span attrs="{'invisible': [('export_file', '!=', False)]}">
                        <button
                            string="Export"
                            name="export"
                            type="object"
                            class="oe_highlight"
                        />
                    </span>
                    <button string="Close" special="cancel" />
                </footer>
            </form>
        </field>
    </record>


    <record id="export_csv_action" model="ir.actions.act_window">
        <field name="name">Export Answers as CSV</field>
        <field name="view_mode">form</field>
        <field name="res_model">survey.export.csv</field>
        <field name="target">new</field>
        <field name="view_id" ref="survey_export_csv_wizard" />
    </record>


</odoo>
