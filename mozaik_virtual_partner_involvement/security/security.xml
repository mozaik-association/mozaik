<odoo>

    <record id="virtual_partner_involvement_reader_rule" model="ir.rule">
        <field name="name">Partner/Involvement for Readers</field>
        <field
            name="model_id"
            ref="mozaik_virtual_partner_involvement.model_virtual_partner_involvement"
        />
        <field
            name="domain_force"
        >[('postal_vip','=',False),('email_vip','=',False)]</field>
        <field
            name="groups"
            eval="[(6, 0, [
            ref('mozaik_coordinate.res_groups_coordinate_reader'),
        ])]"
        />
        <field name="perm_read" eval="1" />
        <field name="perm_write" eval="0" />
        <field name="perm_create" eval="0" />
        <field name="perm_unlink" eval="0" />
    </record>

    <record id="virtual_partner_involvement_vip_reader_rule" model="ir.rule">
        <field name="name">Partner/Involvement for Vip Readers</field>
        <field
            name="model_id"
            ref="mozaik_virtual_partner_involvement.model_virtual_partner_involvement"
        />
        <field name="domain_force">[(1,'=',1)]</field>
        <field
            name="groups"
            eval="[(6, 0, [
            ref('mozaik_coordinate.res_groups_coordinate_vip_reader'),
        ])]"
        />
        <field name="perm_read" eval="1" />
        <field name="perm_write" eval="0" />
        <field name="perm_create" eval="0" />
        <field name="perm_unlink" eval="0" />
    </record>

</odoo>
