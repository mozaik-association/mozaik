<?xml version='1.0' encoding='UTF-8' ?>
<odoo>

    <record id="abstract_instance_search_view" model="ir.ui.view">
        <field name="name">abstract.instance.search</field>
        <field name="model">abstract.instance</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="power_level_id" />
                <field name="parent_id" />

                <filter name="expired" string="Archived"
                        context="{'invisible_expire_date': False}"
                        domain="[('active','=',False)]" help="Archived Instances" />
                <filter name="all" string="All"
                        context="{'invisible_expire_date': False}"
                        domain="[('active', '&lt;=', 1)]" help="All Instances, archived or not" />

                <group expand="0" string="Group By..." name="group_by">
                    <filter name="power_level" string="Power Level" context="{'group_by':'power_level_id'}" />
                    <filter name="parent" string="Parent" context="{'group_by':'parent_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="abstract_instance_tree_view" model="ir.ui.view">
        <field name="name">abstract.instance.tree</field>
        <field name="model">abstract.instance</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="power_level_id"/>
                <field name="parent_id" invisible="1"/>
                <field name="expire_date" invisible="context.get('invisible_expire_date', True)" />
            </tree>
        </field>
    </record>

    <record id="abstract_instance_action" model="ir.actions.act_window">
        <field name="name">Abstract Instances</field>
        <field name="res_model">abstract.instance</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="abstract_instance_search_view" />
        <field name="view_id" ref="abstract_instance_tree_view" />
    </record>

    <record id="abstract_instance_form_view" model="ir.ui.view">
        <field name="name">abstract.instance.form</field>
        <field name="model">abstract.instance</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <div attrs="{'invisible': ['|',('id','=',False),('active','=',False)]}">
                    </div>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        
                    <field name="active" invisible="1" />
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    
                        <button name="%(abstract_instance_action)d" string="Instances" type="action" class="oe_stat_button" icon="fa-indent"
                                attrs="{'invisible': [('id','=',False)]}"
                                context="{'search_default_parent_id': id,
                                          'default_parent_id' : id}" />
                        <button string="Assemblies" name="%(abstract_assembly_action)d" class="oe_stat_button" icon="fa-university"
                                type="action" attrs="{'invisible': [('id','=',False)]}"
                                context="{'search_default_instance_id': id,
                                          'default_instance_id': id,
                                          'search_default_all': True}" />
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" default_focus="1"/></h1>
                    </div>

                    <group>
                        <group name="data_1">
                            <field name="power_level_id"/>
                            <field name="parent_id"/>
                        </group>
                        <group name="data_2">
                        </group>
                    </group>

                    <group name="status" attrs="{'invisible': [('id','=',False)]}">
                        <group name="validity">
                            <field name="create_date" />
                            <field name="expire_date" attrs="{'invisible': [('active','=',True)]}" />
                        </group>
                        <group name="other">
                        </group>
                    </group>

                    <notebook>
                        <page string="Assemblies" name="assemblies" attrs="{'invisible': [('id','=',False)]}" autofocus="autofocus">
                            <field name="assembly_ids" attrs="{'invisible': [('active','=',False)]}"
                                   context="{'default_instance_id': id}">
                                <tree>
                                    <field name="assembly_category_id"/>
                                </tree>
                            </field>
                            <field name="assembly_inactive_ids" readonly = "1" attrs="{'invisible': [('active','=',True)]}">
                                <tree>
                                    <field name="assembly_category_id"/>
                                </tree>
                            </field>
                        </page>
                        <page string="More Info" name="dev" groups="base.group_erp_manager">
                            <group name="moreinfo"/>
                        </page>
                    </notebook>
                </sheet>
                <div name="chat" class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="mozaik_abstract_model.res_groups_follower_manager"/>
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

</odoo>
