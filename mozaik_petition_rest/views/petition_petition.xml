<odoo>

    <record model="ir.ui.view" id="petition_petition_form_view">
        <field name="name">petition.petition.form (in mozaik_petition_rest)</field>
        <field name="model">petition.petition</field>
        <field name="inherit_id" ref="mozaik_petition.petition_petition_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='visible_on_website']" position="after">
                <field name="is_headline" />
            </xpath>
        </field>
    </record>


</odoo>
