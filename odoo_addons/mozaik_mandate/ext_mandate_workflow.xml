<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="wkf_ext_candidature" model="workflow">
            <field name="name">ext.candidature.basic</field>
            <field name="osv">ext.candidature</field>
            <field name="on_create">True</field>
        </record>

        <!-- Activity -->
        
        <record id="ext_act_draft" model="workflow.activity">
            <field name="wkf_id" ref="wkf_ext_candidature"/>
            <field name="flow_start">True</field>
            <field name="name">draft</field>
        </record>
        
        <record id="ext_act_declared" model="workflow.activity">
            <field name="wkf_id" ref="wkf_ext_candidature"/>
            <field name="name">declared</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'declared'})</field>
        </record>
        
        <record id="ext_act_suggested" model="workflow.activity">
            <field name="wkf_id" ref="wkf_ext_candidature"/>
            <field name="name">suggested</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'suggested'})</field>
        </record>
        
        <record id="ext_act_rejected" model="workflow.activity">
            <field name="wkf_id" ref="wkf_ext_candidature"/>
            <field name="name">rejected</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'rejected'})</field>
        </record>
              
        <record id="ext_act_elected" model="workflow.activity">
            <field name="wkf_id" ref="wkf_ext_candidature"/>
            <field name="name">elected</field>
            <field name="kind">function</field>            
            <field name="flow_stop">True</field>
            <field name="action">action_elected()</field>
        </record>
        
        <!-- Transition -->
        
        <record id="ext_trans_draft_declare" model="workflow.transition">
            <field name="act_from" ref="ext_act_draft"/>
            <field name="act_to" ref="ext_act_declared"/>           
        </record>
        
        <record id="ext_trans_declare_suggest" model="workflow.transition">
            <field name="act_from" ref="ext_act_declared"/>
            <field name="act_to" ref="ext_act_suggested"/>
            <field name="signal">button_suggest</field>  
        </record>
        
        <record id="ext_trans_declare_reject" model="workflow.transition">
            <field name="act_from" ref="ext_act_declared"/>
            <field name="act_to" ref="ext_act_rejected"/>
            <field name="signal">button_reject</field>  
        </record>
        
        <record id="ext_trans_reject_declare" model="workflow.transition">
            <field name="act_from" ref="ext_act_rejected"/>
            <field name="act_to" ref="ext_act_declared"/>
            <field name="signal">button_declare</field>  
        </record>
        
        <record id="ext_trans_suggest_declare" model="workflow.transition">
            <field name="act_from" ref="ext_act_suggested"/>
            <field name="act_to" ref="ext_act_declared"/>
            <field name="signal">button_declare</field>  
        </record>
        
        <record id="ext_trans_suggested_elected" model="workflow.transition">
            <field name="act_from" ref="ext_act_suggested"/>
            <field name="act_to" ref="ext_act_elected"/>            
            <field name="signal">action_accept</field>  
        </record>
    </data>
</openerp>