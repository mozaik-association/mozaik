<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">

        <!-- Search and Tree Views -->

        <record id="sta_instance_search_view" model="ir.ui.view">
            <field name="name">sta.instance.search</field>
            <field name="model">sta.instance</field>
            <field name="inherit_id" ref="abstract_instance_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="identifier"/>
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="secondary_parent_id"/>
                    <field name="int_instance_id"/>
                </xpath>
                <xpath expr="//filter[@name='parent']" position="after">
                    <filter name="secondary_parent" string="Secondary Parent" domain="[]" context="{'group_by':'secondary_parent_id'}" />
                    <filter name="int_instance" string="Internal Instance" domain="[]" context="{'group_by':'int_instance_id'}" />
                </xpath>
            </field>
        </record>

        <record id="sta_instance_tree_view" model="ir.ui.view">
            <field name="name">sta.instance.tree</field>
            <field name="model">sta.instance</field>
            <field name="inherit_id" ref="abstract_instance_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='power_level_id']" position="after">
                    <field name="identifier"/>
                    <field name="int_instance_id"/>
                    <field name="secondary_parent_id" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="sta_assembly_category_search_view" model="ir.ui.view">
            <field name="name">sta.assembly.category.search.view</field>
            <field name="model">sta.assembly.category</field>
            <field name="inherit_id" ref="abstract_assembly_category_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="power_level_id" />
                </xpath>
                <xpath expr="//group[@name='group_by']" position="inside">
                    <filter name="level" string="Power Level" domain="[]" context="{'group_by':'power_level_id'}" />
                </xpath>
            </field>
        </record>

        <record id="sta_assembly_category_tree_view" model="ir.ui.view">
            <field name="name">sta.assembly.category.tree.view</field>
            <field name="model">sta.assembly.category</field>
            <field name="inherit_id" ref="abstract_assembly_category_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="power_level_id" />
                    <field name="is_legislative" />
                </xpath>
            </field>
        </record>

        <record id="int_assembly_search_view" model="ir.ui.view">
            <field name="name">int.assembly.search</field>
            <field name="model">int.assembly</field>
            <field name="inherit_id" ref="abstract_assembly_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='instance_id']" position="after">
                    <field name="designation_int_assembly_id" />
                </xpath>
                <xpath expr="//filter[@name='expired']" position="before">
                    <filter name="designation_assemblies" string="Designation Assemblies"
                            domain="[('is_designation_assembly','=',True)]" />
                    <filter name="executive_assemblies" string="Executive Assemblies"
                            domain="[('designation_int_assembly_id','!=',False)]" />
                    <separator/>
                </xpath>
                <xpath expr="//group[@name='group_by']" position="inside">
                    <filter name="designation_assembly" string="Designation Assembly" domain="[]" context="{'group_by':'designation_int_assembly_id'}" />
                </xpath>
            </field>
        </record>

        <record id="int_assembly_tree_view" model="ir.ui.view">
            <field name="name">int.assembly.tree</field>
            <field name="model">int.assembly</field>
            <field name="inherit_id" ref="abstract_assembly_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='assembly_category_id']" position="after">
                    <field name="is_designation_assembly" />
                </xpath>
            </field>
        </record>

        <record id="int_assembly_category_search_view" model="ir.ui.view">
            <field name="name">int.assembly.category.search.view</field>
            <field name="model">int.assembly.category</field>
            <field name="inherit_id" ref="abstract_assembly_category_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="power_level_id" />
                </xpath>
                <xpath expr="//group[@name='group_by']" position="inside">
                    <filter name="level" string="Power Level" domain="[]" context="{'group_by':'power_level_id'}" />
                </xpath>
            </field>
        </record>

        <record id="int_assembly_category_tree_view" model="ir.ui.view">
            <field name="name">int.assembly.category.tree.view</field>
            <field name="model">int.assembly.category</field>
            <field name="inherit_id" ref="abstract_assembly_category_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="power_level_id" />
                    <field name="is_secretariat" />
                </xpath>
            </field>
        </record>

        <record id="ext_assembly_tree_view" model="ir.ui.view">
            <field name="name">ext.assembly.tree</field>
            <field name="model">ext.assembly</field>
            <field name="inherit_id" ref="abstract_assembly_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='instance_id']" position="replace">
                    <field name="ref_partner_id" />
                </xpath>
                <xpath expr="//field[@name='assembly_category_id']" position="after">
                    <field name="instance_id" />
                </xpath>
            </field>
        </record>

        <record id="ext_assembly_search_view" model="ir.ui.view">
            <field name="name">ext.assembly.search</field>
            <field name="model">ext.assembly</field>
            <field name="inherit_id" ref="abstract_assembly_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='instance_id']" position="before">
                    <field name="ref_partner_id" domain="[('is_company','=',True),('is_assembly','=',False)]" />
                </xpath>
                <xpath expr="//field[@name='instance_id']" position="after">
                    <field name="designation_int_assembly_id" />
                </xpath>
                <xpath expr="//filter[@name='instance']" position="before">
                    <filter name="partner" string="Partner" domain="[]" context="{'group_by':'ref_partner_id'}"/>
                    <filter name="designation_assembly" string="Designation Assembly" domain="[]" context="{'group_by':'designation_int_assembly_id'}" />
                </xpath>
            </field>
        </record>

        <record id="legislature_search_view" model="ir.ui.view">
            <field name="name">legislature.search</field>
            <field name="model">legislature</field>
            <field name="arch" type="xml">
                <search string="Legislature" version="7.0">
                    <field name="name" />
                    <field name="power_level_id" />
                    <field name="start_date" />

                    <filter name="expired" string="Expired"
                        context="{'invisible_expire_date': False}"
                        domain="[('active','=',False)]" help="Expired Legislatures" />
                    <filter name="all" string="All"
                        context="{'invisible_expire_date': False}"
                        domain="['|', ('active', '=', True), ('active', '!=', True)]" help="All Legislatures, expired or not" />

                    <group expand="0" string="Group By..." name="group_by">
                        <filter name="level" string="Power Level" domain="[]" context="{'group_by':'power_level_id'}" />
                        <filter name="year" string="Year" domain="[]" context="{'group_by':'start_date:year'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="legislature_tree_view" model="ir.ui.view">
            <field name="name">legislature.tree</field>
            <field name="model">legislature</field>
            <field name="arch" type="xml">
                <tree string="Legislature" version="7.0">
                    <field name="name"/>
                    <field name="power_level_id"/>
                    <field name="start_date"/>
                    <field name="deadline_date"/>
                    <field name="expire_date" invisible="context.get('invisible_expire_date', True)" />
                </tree>
            </field>
        </record>

        <record id="electoral_district_search_view" model="ir.ui.view">
            <field name="name">electoral.district.search</field>
            <field name="model">electoral.district</field>
            <field name="arch" type="xml">
                <search string="Electoral District" version="7.0">
                    <field name="name" />
                    <field name="sta_instance_id" />
                    <field name="assembly_id" />
                    <field name="int_instance_id" />
                    <field name="designation_int_assembly_id" />

                    <filter name="expired" string="Expired"
                        context="{'invisible_expire_date': False}"
                        domain="[('active','=',False)]" />
                    <filter name="all" string="All"
                        context="{'invisible_expire_date': False}"
                        domain="['|', ('active', '=', True), ('active', '!=', True)]" />

                    <group expand="0" string="Group By..." name="group_by">
                        <filter name="instance" string="Instance" domain="[]" context="{'group_by':'sta_instance_id'}" />
                        <filter name="assembly" string="Assembly" domain="[]" context="{'group_by':'assembly_id'}" />
                        <filter name="int_instance" string="Internal Instance" domain="[]" context="{'group_by':'int_instance_id'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="electoral_district_tree_view" model="ir.ui.view">
            <field name="name">electoral.district.tree</field>
            <field name="model">electoral.district</field>
            <field name="arch" type="xml">
                <tree string="Electoral District" version="7.0">
                    <field name="name"/>
                    <field name="sta_instance_id"/>
                    <field name="assembly_id"/>
                    <field name="int_instance_id" invisible="1"/>
                    <field name="expire_date" invisible="context.get('invisible_expire_date', True)" />
                </tree>
            </field>
        </record>

        <!-- Actions -->

        <record id="sta_assembly_action" model="ir.actions.act_window">
            <field name="name">State Assemblies</field>
            <field name="res_model">sta.assembly</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="abstract_assembly_search_view" />
            <field name="view_id" ref="abstract_assembly_tree_view" />
        </record>

        <record id="sta_instance_action" model="ir.actions.act_window">
            <field name="name">State Instances</field>
            <field name="res_model">sta.instance</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="sta_instance_search_view" />
            <field name="view_id" ref="sta_instance_tree_view" />
        </record>

        <record id="sta_instance_children_action" model="ir.actions.act_window">
            <field name="name">Children State Instances</field>
            <field name="res_model">sta.instance</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="sta_instance_search_view" />
            <field name="view_id" ref="sta_instance_tree_view" />
            <field name="domain">['|',('parent_id','=',active_id),('secondary_parent_id','=',active_id)]</field>
        </record>

        <record id="legislature_action" model="ir.actions.act_window">
            <field name="name">Legislatures</field>
            <field name="res_model">legislature</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="legislature_search_view" />
            <field name="view_id" ref="legislature_tree_view" />
        </record>

        <record id="electoral_district_action" model="ir.actions.act_window">
            <field name="name">Electoral Districts</field>
            <field name="res_model">electoral.district</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="electoral_district_search_view" />
            <field name="view_id" ref="electoral_district_tree_view" />
        </record>

        <record id="int_assembly_action" model="ir.actions.act_window">
            <field name="name">Internal Assemblies</field>
            <field name="res_model">int.assembly</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="int_assembly_search_view" />
            <field name="view_id" ref="int_assembly_tree_view" />
        </record>

        <record id="int_instance_action" model="ir.actions.act_window">
            <field name="name">Internal Instances</field>
            <field name="res_model">int.instance</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="abstract_instance_search_view" />
            <field name="view_id" ref="abstract_instance_tree_view" />
        </record>

        <record id="ext_assembly_action" model="ir.actions.act_window">
            <field name="name">External Assemblies</field>
            <field name="res_model">ext.assembly</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="ext_assembly_search_view" />
            <field name="view_id" ref="ext_assembly_tree_view" />
        </record>

        <record id="sta_power_level_action" model="ir.actions.act_window">
            <field name="name">State Power Levels</field>
            <field name="res_model">sta.power.level</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="abstract_power_level_search_view" />
            <field name="view_id" ref="abstract_power_level_tree_view" />
        </record>

        <record id="sta_assembly_category_action" model="ir.actions.act_window">
            <field name="name">State Assembly Categories</field>
            <field name="res_model">sta.assembly.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="sta_assembly_category_search_view" />
            <field name="view_id" ref="sta_assembly_category_tree_view" />
        </record>

        <record id="int_power_level_action" model="ir.actions.act_window">
            <field name="name">Internal Power Levels</field>
            <field name="res_model">int.power.level</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="abstract_power_level_search_view" />
            <field name="view_id" ref="abstract_power_level_tree_view" />
        </record>

        <record id="int_assembly_category_action" model="ir.actions.act_window">
            <field name="name">Internal Assembly Categories</field>
            <field name="res_model">int.assembly.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="int_assembly_category_search_view" />
            <field name="view_id" ref="int_assembly_category_tree_view" />
        </record>

        <record id="ext_assembly_category_action" model="ir.actions.act_window">
            <field name="name">External Assembly Categories</field>
            <field name="res_model">ext.assembly.category</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="abstract_assembly_category_search_view" />
            <field name="view_id" ref="abstract_assembly_category_tree_view" />
        </record>

        <!-- Form Views -->

        <record id="sta_power_level_form_view" model="ir.ui.view">
            <field name="name">sta.power.level.form</field>
            <field name="model">sta.power.level</field>
            <field name="inherit_id" ref="abstract_power_level_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/div[@name='buttons']" position="inside">
                    <button string="Legislatures" name="%(legislature_action)d"
                                type="action" attrs="{'invisible': [('id','=',False)]}"
                                context="{'search_default_power_level_id': active_id,
                                          'default_power_level_id': active_id}" />
                    <button string="Instances" name="%(sta_instance_action)d"
                                type="action" attrs="{'invisible': [('id','=',False)]}"
                                context="{'search_default_power_level_id': active_id,
                                          'default_power_level_id': active_id}" />
                </xpath>
                <xpath expr="//field[@name='assembly_category_ids']" position="attributes">
                    <attribute name="context">{'default_power_level_id': active_id}</attribute>
                </xpath>
                <xpath expr="//field[@name='assembly_category_ids']" position="before">
                    <button string="All Details"
                                    name="%(sta_assembly_category_action)d"
                                    type="action"
                                    context="{'search_default_power_level_id': active_id,
                                              'default_power_level_id': active_id,
                                              'search_default_all': True}"/>
                </xpath>
            </field>
        </record>

        <record id="sta_assembly_category_form_view" model="ir.ui.view">
            <field name="name">sta.assembly.category.form</field>
            <field name="model">sta.assembly.category</field>
            <field name="inherit_id" ref="abstract_assembly_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='assemblies']" position="attributes">
                    <attribute name="name">%(sta_assembly_action)d</attribute>
                </xpath>
                <xpath expr="//group[@name='mandate']" position="before">
                    <group name="data">
                        <field name="power_level_id"/>
                        <field name="is_legislative"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="sta_instance_form_view" model="ir.ui.view">
            <field name="name">sta.instance.form</field>
            <field name="model">sta.instance</field>
            <field name="inherit_id" ref="abstract_instance_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='children']" position="replace">
                    <button string="Children" name="%(sta_instance_children_action)d"
                        type="action" attrs="{'invisible': [('id','=',False)]}"
                        context="{'default_parent_id': active_id}" />
                    <attribute name="name"></attribute>
                </xpath>
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="secondary_parent_id"/>
                    <field name="identifier"/>
                </xpath>
                <xpath expr="//group[@name='data_2']" position="inside">
                    <field name="int_instance_id"/>
                </xpath>
                <xpath expr="//notebook/page[@name='assemblies']" position="after">
                    <page string="Electoral Districts" name="electoral_districts" attrs="{'invisible': [('id','=',False)]}">
                        <button string="All Details"
                                    name="%(electoral_district_action)d"
                                    type="action"
                                    context="{'search_default_sta_instance_id': active_id,
                                              'default_sta_instance_id': active_id,
                                              'search_default_all': True}"/>
                        <field name="electoral_district_ids" context="{'default_sta_instance_id': active_id}">
                            <tree>
                                <field name="name"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//field[@name='assembly_ids']" position="attributes">
                    <attribute name="context">{'default_instance_id': active_id}</attribute>
                </xpath>
                <xpath expr="//field[@name='assembly_ids']" position="before">
                    <button string="All Details"
                                    name="%(sta_assembly_action)d"
                                    type="action"
                                    context="{'search_default_instance_id': active_id,
                                              'default_instance_id': active_id,
                                              'search_default_all': True}"/>
                </xpath>
            </field>
        </record>

        <record id="sta_assembly_form_view" model="ir.ui.view">
            <field name="name">sta.assembly.form</field>
            <field name="model">sta.assembly</field>
            <field name="inherit_id" ref="abstract_assembly_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/div[@name='buttons']" position="inside">
                    <button string="Electoral Districts" name="%(electoral_district_action)d"
                                type="action" attrs="{'invisible': [('id','=',False)]}"
                                context="{'search_default_assembly_id': active_id,
                                          'default_assembly_id': active_id}" />
                </xpath>
            </field>
        </record>

        <record id="legislature_form_view" model="ir.ui.view">
            <field name="name">legislature.form</field>
            <field name="model">legislature</field>
            <field name="arch" type="xml">
                <form string="Legislature" version="7.0">
                    <header>
                        <div attrs="{'invisible': ['|',('id','=',False),('active','=',False)]}"
                             invisible="context.get('popup')"
                             groups="mozaik_base.mozaik_res_groups_configurator">
                            <button name="action_invalidate" string="Invalidate" type="object"
                                    confirm="Invalidate legislature: proceed anyway?" />
                        </div>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons" invisible="context.get('popup')">
                            <button string="Electoral Districts" name="%(electoral_district_action)d"
                                type="action" attrs="{'invisible': [('id','=',False)]}"
                                context="{'search_default_power_level_id': power_level_id,}" />
                        </div>

                        <group>
                            <group  name="Power Level">
                                <field name="power_level_id"/>
                            </group>
                            <group name="Dates">
                                <field name="election_date" />
                                <field name="start_date" />
                                <field name="deadline_date" />
                            </group>
                        </group>

                        <group name="status" attrs="{'invisible': [('id','=',False)]}">
                            <group name="validity">
                                <field name="create_date"/>
                                <field name="expire_date" attrs="{'invisible': [('active','=',True)]}" />
                            </group>
                            <group name="other">
                            </group>
                        </group>

                    </sheet>
                    <div name="dev" class="oe_form_sheetbg" groups="mozaik_base.res_groups_developper">
                        <div class="oe_formview oe_form_sheet_width">
                            <h3>More Info</h3>
                            <div attrs="{'invisible': ['|',('id','=',False),('active','=',True)]}">
                                <button name="action_revalidate" string="Validate" type="object"
                                        confirm="Reactivate document: proceed anyway?" />
                            </div>
                            <group name="moreinfo">
                                <field name="id"/>
                                <field name="active"/>
                            </group>
                        </div>
                    </div>
                    <div name="chat" class="oe_chatter" invisible="context.get('popup')">
                        <field name="message_follower_ids" widget="mail_followers" groups="mozaik_base.mozaik_res_groups_configurator"/>
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="electoral_district_form_view" model="ir.ui.view">
            <field name="name">electoral.district.form</field>
            <field name="model">electoral.district</field>
            <field name="arch" type="xml">
                <form string="Electoral District" version="7.0">
                    <header>
                        <div attrs="{'invisible': ['|',('id','=',False),('active','=',False)]}"
                             invisible="context.get('popup')"
                             groups="mozaik_base.mozaik_res_groups_configurator">
                            <button name="action_invalidate" string="Invalidate" type="object"
                                    confirm="Invalidate electoral district: proceed anyway?" />
                        </div>
                    </header>
                    <sheet>
                        <div class="oe_title" name="title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons" invisible="context.get('popup')">
                        </div>

                        <group>
                            <group name="state">
                                <field name="sta_instance_id" default_focus="1"
                                       on_change="onchange_sta_instance_id(sta_instance_id)" />
                                <field name="assembly_id"/>
                            </group>
                            <group name="internal">
                                <field name="int_instance_id" readonly="1"/>
                                <field name="designation_int_assembly_id"/>
                            </group>
                        </group>

                        <group name="status" attrs="{'invisible': [('id','=',False)]}">
                            <group name="validity">
                                <field name="create_date" />
                                <field name="expire_date" attrs="{'invisible': [('active','=',True)]}" />
                            </group>
                            <group name="other">
                            </group>
                        </group>

                    </sheet>
                    <div name="dev" class="oe_form_sheetbg" groups="mozaik_base.res_groups_developper">
                        <div class="oe_formview oe_form_sheet_width">
                            <h3>More Info</h3>
                            <div attrs="{'invisible': ['|',('id','=',False),('active','=',True)]}">
                                <button name="action_revalidate" string="Validate" type="object"
                                        confirm="Reactivate document: proceed anyway?" />
                            </div>
                            <group name="moreinfo">
                                <field name="id"/>
                                <field name="active"/>
                                <field name="power_level_id"/>
                            </group>
                        </div>
                    </div>
                    <div name="chat" class="oe_chatter" invisible="context.get('popup')">
                        <field name="message_follower_ids" widget="mail_followers" groups="mozaik_base.mozaik_res_groups_configurator"/>
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

        <record id="ext_assembly_category_form_view" model="ir.ui.view">
            <field name="name">ext.assembly.category.form</field>
            <field name="model">ext.assembly.category</field>
            <field name="inherit_id" ref="abstract_assembly_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='assemblies']" position="attributes">
                    <attribute name="name">%(ext_assembly_action)d</attribute>
                </xpath>
            </field>
        </record>

        <record id="ext_assembly_form_view" model="ir.ui.view">
            <field name="name">ext.assembly.form</field>
            <field name="model">ext.assembly</field>
            <field name="inherit_id" ref="abstract_assembly_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='instance_id']" position="before">
                     <field name="ref_partner_id" domain="[('is_company','=',True),('is_assembly','=',False)]"
                            context="{'default_is_company': True}"/>
                </xpath>
                <xpath expr="//field[@name='months_before_end_of_mandate']" position="before">
                     <field name="designation_int_assembly_id" required="1"/>
                </xpath>
                <xpath expr="//field[@name='assembly_category_id']" position="attributes">
                     <attribute name="on_change">onchange_assembly_category_id(assembly_category_id)</attribute>
                </xpath>
            </field>
        </record>

        <record id="int_power_level_form_view" model="ir.ui.view">
            <field name="name">int.power.level.form</field>
            <field name="model">int.power.level</field>
            <field name="inherit_id" ref="abstract_power_level_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/div[@name='buttons']" position="inside">
                    <button string="Instances" name="%(int_instance_action)d"
                                type="action" attrs="{'invisible': [('id','=',False)]}"
                                context="{'search_default_power_level_id': active_id,
                                          'default_power_level_id': active_id}" />
                </xpath>
                <xpath expr="//group[@name='Data']" postion="after">
                    <field name="level_for_followers"/>
                </xpath>
                <xpath expr="//field[@name='assembly_category_ids']" position="attributes">
                    <attribute name="context">{'default_power_level_id': active_id}</attribute>
                </xpath>
                <xpath expr="//field[@name='assembly_category_ids']" position="before">
                    <button string="All Details"
                                    name="%(int_assembly_category_action)d"
                                    type="action"
                                    context="{'search_default_power_level_id': active_id,
                                              'default_power_level_id': active_id,
                                              'search_default_all': True}"/>
                </xpath>
            </field>
        </record>

        <record id="int_assembly_category_form_view" model="ir.ui.view">
            <field name="name">int.assembly.category.form</field>
            <field name="model">int.assembly.category</field>
            <field name="inherit_id" ref="abstract_assembly_category_form_view"/>
            <field name="arch" type="xml">
                 <xpath expr="//button[@name='assemblies']" position="attributes">
                    <attribute name="name">%(int_assembly_action)d</attribute>
                </xpath>
                <xpath expr="//group[@name='mandate']" position="before">
                    <group name="Info">
                        <field name="power_level_id" />
                        <field name="is_secretariat"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="int_assembly_form_view" model="ir.ui.view">
            <field name="name">int.assembly.form</field>
            <field name="model">int.assembly</field>
            <field name="inherit_id" ref="abstract_assembly_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='months_before_end_of_mandate']" position="before">
                     <field name="is_designation_assembly"/>
                     <field name="designation_int_assembly_id" domain="[('is_designation_assembly', '=', True), ('id','!=',active_id)]"/>
                </xpath>
                <xpath expr="//field[@name='months_before_end_of_mandate']" position="attributes">
                     <attribute name="attrs">{'invisible': [('designation_int_assembly_id', '=', False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='assembly_category_id']" position="attributes">
                     <attribute name="on_change">onchange_assembly_category_id(assembly_category_id)</attribute>
                </xpath>
            </field>
        </record>

        <record id="int_instance_form_view" model="ir.ui.view">
            <field name="name">int.instance.form</field>
            <field name="model">int.instance</field>
            <field name="inherit_id" ref="abstract_instance_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='children']" position="after">
                    <button string="State Instances" name="%(sta_instance_action)d"
                                type="action" attrs="{'invisible': [('id','=',False)]}"
                                context="{'search_default_int_instance_id': active_id,
                                          'default_int_instance_id': active_id}" />
                    <button string="External Assemblies" name="%(ext_assembly_action)d"
                                type="action" attrs="{'invisible': [('id','=',False)]}"
                                context="{'search_default_instance_id': active_id,
                                          'default_instance_id': active_id}" />
                </xpath>
                <xpath expr="//button[@name='children']" position="attributes">
                    <attribute name="name">%(int_instance_action)d</attribute>
                </xpath>
                <xpath expr="//field[@name='assembly_ids']" position="before">
                    <button string="All Details"
                                    name="%(int_assembly_action)d"
                                    type="action"
                                    context="{'search_default_instance_id': active_id,
                                              'default_instance_id': active_id,
                                              'search_default_all': True}"/>
                </xpath>

                <xpath expr="//page[@name='assemblies']" position="after">
                    <page string="Multi-Instances" name="multi_instances" attrs="{'invisible': [('id','=',False)]}">
                        <separator string="Composition"/>
                        <field name="multi_instance_pc_m2m_ids"
                               context="{'default_parent_id': parent_id,
                                         'default_power_level_id': power_level_id}">
                            <tree>
                                <field name="name"/>
                                <field name="power_level_id"/>
                                <field name="active"/>
                            </tree>
                        </field>
                        <separator string="Membership"/>
                        <field name="multi_instance_cp_m2m_ids"
                               context="{'default_parent_id': parent_id,
                                         'default_power_level_id': power_level_id}">
                            <tree>
                                <field name="name"/>
                                <field name="power_level_id"/>
                                <field name="active"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Electoral Districts" name="electoral_districts" attrs="{'invisible': [('id','=',False)]}">
                        <button string="All Details"
                                    name="%(electoral_district_action)d"
                                    type="action"
                                    context="{'search_default_int_instance_id': active_id,
                                              'default_int_instance_id': active_id,
                                              'search_default_all': True}"/>
                        <field name="electoral_district_ids" context="{'default_int_instance_id': active_id}"
                               attrs="{'invisible': [('active','=',False)]}">
                            <tree>
                                <field name="name"/>
                            </tree>
                        </field>
                        <field name="electoral_district_inactive_ids" context="{'default_int_instance_id': active_id}"
                               attrs="{'invisible': [('active','=',True)]}">
                            <tree>
                                <field name="name"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Menus -->

        <menuitem id="state_submenu" name="State"
                  sequence="10" parent="mozaik_base.structures_root_menu" />

        <menuitem id="state_instance_menu" action="sta_instance_action"
                  sequence="10" parent="state_submenu" />

        <menuitem id="state_assembly_menu" action="sta_assembly_action"
                  sequence="20" parent="state_submenu" />

        <menuitem id="electoral_district_menu" action="electoral_district_action"
                  sequence="30" parent="state_submenu" />

        <menuitem id="legislatures_menu" action="legislature_action"
                  sequence="40" parent="state_submenu" />

        <menuitem id="internal_submenu" name="Internal"
                  sequence="20" parent="mozaik_base.structures_root_menu" />

        <menuitem id="internal_instance_menu" action="int_instance_action"
                  sequence="10" parent="internal_submenu" />

        <menuitem id="internal_assembly_menu" action="int_assembly_action"
                  sequence="20" parent="internal_submenu" />

        <menuitem id="external_submenu" name="External"
                  sequence="30" parent="mozaik_base.structures_root_menu" />

        <menuitem id="external_assembly_menu" action="ext_assembly_action"
                  sequence="20" parent="external_submenu" />

        <menuitem id="configuration_submenu" name="Configuration"
                  sequence="90" parent="mozaik_base.structures_root_menu" groups="mozaik_base.mozaik_res_groups_configurator" />

        <menuitem id="state_configuration_submenu" name="State"
                  sequence="10" parent="configuration_submenu"/>

        <menuitem id="sta_power_level_menu" action="sta_power_level_action"
                  sequence="10" parent="state_configuration_submenu" />

        <menuitem id="sta_assembly_category_menu" action="sta_assembly_category_action"
                  sequence="20" parent="state_configuration_submenu" />

        <menuitem id="internal_configuration_submenu" name="Internal"
                  sequence="20" parent="configuration_submenu"/>

        <menuitem id="int_power_level_menu" action="int_power_level_action"
                  sequence="10" parent="internal_configuration_submenu" />

        <menuitem id="int_assembly_category_menu" action="int_assembly_category_action"
                  sequence="20" parent="internal_configuration_submenu" />

        <menuitem id="external_configuration_submenu" name="External"
                  sequence="30" parent="configuration_submenu"/>

        <menuitem id="ext_assembly_category_menu" action="ext_assembly_category_action"
                  sequence="20" parent="external_configuration_submenu" />

    </data>
