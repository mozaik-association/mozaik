<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">

        <record id="allow_duplicate_wizard" model="ir.ui.view">
            <field name="name">allow.duplicate.wizard</field>
            <field name="model">allow.duplicate.wizard</field>
            <field name="arch" type="xml">
                <form string="Allow Duplicates" version="7.0">
                    <strong>
                    Selected duplicates are allowed. Are you sure?
                    </strong>
                    <footer>
                        <span name="go-wizard">
                            <button string="Ok" name="button_allow_duplicate"
                                    type="object" class="oe_highlight" />
                            or
                        </span>
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>