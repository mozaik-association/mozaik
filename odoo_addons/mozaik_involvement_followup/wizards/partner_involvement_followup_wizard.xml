<openerp>
<data>

    <record model="ir.ui.view" id="partner_involvement_followup_wizard_form_view">
        <field name="name">partner.involvement.followup.wizard.form (in mozaik_involvement_followup)</field>
        <field name="model">partner.involvement.followup.wizard</field>
        <field name="arch" type="xml">
            <form string="Partner Involvement Followup Wizard">
                <group>
                    <field name="followup" widget="radio"/>
                    <field name="current_category_id" invisible="1"/>
                    <field name="next_category_ids" attrs="{'required': [('followup', '=', 'continue')], 'invisible': [('followup', '!=', 'continue')]}"
                           options="{'no_create': 1, 'no_open': 1}"
                           widget="many2many_tags"/>
                </group>
                <div class="oe_clear">
                    <br />
                    <br />
                    <br />
                    <br />
                </div>
                <footer>
                    <button name="doit"
                            string="OK"
                            class="oe_highlight"
                            type="object"/>
                    or
                    <button string="Cancel"
                            class="oe_link"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="partner_involvement_followup_wizard_act_window">
        <field name="name">Follow-up</field>
        <field name="res_model">partner.involvement.followup.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

</data>
</openerp>
