<odoo>

    <record model="ir.ui.view" id="survey_survey_form_view">
        <field
            name="name"
        >survey.survey.form (in mozaik_survey_membership_request_involvement)</field>
        <field name="model">survey.survey</field>
        <field
            name="inherit_id"
            ref="mozaik_survey_mandatory_questions.survey_survey_form_view"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='constr_mandatory']" position="after">
                <!-- All the following fields have to be present in the view
                     to be loaded correctly in default questions -->
                <field name="bridge_field_id" invisible="1" />
            </xpath>
        </field>
    </record>



</odoo>
