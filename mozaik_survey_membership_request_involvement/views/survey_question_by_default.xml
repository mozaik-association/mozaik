<odoo>

        <record model="ir.ui.view" id="survey_question_by_default_form_view">
        <field
            name="name"
        >survey.question.by.default.form (in mozaik_survey_membership_request_involvement)</field>
        <field name="model">survey.question.by.default</field>
        <field
            name="inherit_id"
            ref="mozaik_survey_mandatory_questions.survey_question_by_default_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='options']/group" position="after">
                <group string="Link with the membership request" name="bridge_field">
                    <field
                        name="bridge_field_id"
                        options="{'no_create': True, 'no_open': True}"
                    />
                </group>
            </xpath>
        </field>
    </record>


</odoo>
