<odoo>

    <record model="ir.ui.view" id="ext_selection_committee_form_view">
        <field name="name">ext.selection.committee.form (in mozaik_committee)</field>
        <field name="model">ext.selection.committee</field>
        <field name="inherit_id" ref="abstract_selection_committee_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='assembly_id']" position="before">
                <field name="assembly_category_id" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='assembly_id']" position="attributes">
                <attribute
                    name="domain"
                    translation="off"
                >[('assembly_category_id', '=', assembly_category_id)]</attribute>
            </xpath>
            <xpath expr="//field[@name='assembly_id']" position="before">
                    <field
                    name="mandate_category_id"
                    required="1"
                    domain="[('type', '=', 'ext')]"
                    context="{'default_type': 'ext'}"
                />
            </xpath>
            <xpath
                expr="//button[@name='button_designate_candidatures']"
                position="before"
            >
                <button
                    string="All Details"
                    name="%(ext_candidature_action)d"
                    type="action"
                    attrs="{'invisible': [('id','=',False)]}"
                    context="{'search_default_selection_committee_id': active_id,
                                              'default_selection_committee_id': active_id,
                                              'search_default_all': True}"
                />
            </xpath>
        </field>
    </record>

    <record id="ext_selection_committee_action" model="ir.actions.act_window">
        <field name="name">Selection Committee</field>
        <field name="res_model">ext.selection.committee</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="ext_selection_committee_submenu"
        action="ext_selection_committee_action"
        sequence="10"
        parent="mozaik_mandate.ext_submenu"
    />

</odoo>
