<odoo>

    <record model="ir.ui.view" id="website_domain_form_view">
        <field name="model">website.domain</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record model="ir.ui.view" id="website_domain_tree_view">
        <field name="model">website.domain</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="website_domain_act_window">
        <field name="name">Website Domains</field>
        <field name="res_model">website.domain</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="event_website_domain_menu">
        <field name="name">Website Domains</field>
        <field name="parent_id" ref="event.menu_event_configuration" />
        <field name="action" ref="website_domain_act_window" />
        <field name="sequence" eval="16" />
    </record>

    <record model="ir.ui.menu" id="petition_website_domain_menu">
        <field name="name">Website Domains</field>
        <field name="parent_id" ref="mozaik_petition.configuration_first_level_menu" />
        <field name="action" ref="website_domain_act_window" />
        <field name="sequence" eval="16" />
    </record>

</odoo>
