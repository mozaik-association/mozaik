<odoo>

    <record model="ir.ui.view" id="survey_survey_form_view">
        <field name="name">survey.survey.form (in mozaik_survey_is_private)</field>
        <field name="model">survey.survey</field>
        <field name="inherit_id" ref="survey.survey_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='active']" position="before">
                <field name="is_private" />
                <field
                    name="int_instance_id"
                    attrs="{'invisible': [('is_private', '=', False)]}"
                />
            </xpath>
        </field>
    </record>

    <record id="survey.menu_surveys" model="ir.ui.menu">
        <field
            name="groups_id"
            eval="[(4,ref('mozaik_survey_is_private.group_survey_child_instances'))]"
        />
    </record>

</odoo>
