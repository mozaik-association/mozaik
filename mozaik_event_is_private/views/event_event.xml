<odoo>

    <record model="ir.ui.view" id="event_event_form_view">
        <field name="name">event.event.form (in mozaik_event_is_private)</field>
        <field name="model">event.event</field>
        <field
            name="inherit_id"
            ref="mozaik_event_publish_date.event_event_form_view"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='publish_date']" position="after">
                <field name="visible_on_website" />
            </xpath>
            <xpath expr="//field[@name='auto_confirm']" position="after">
                    <field name="is_private" />
                <field
                    name="int_instance_id"
                    attrs="{'invisible': [('is_private', '=', False)]}"
                />

            </xpath>
        </field>
    </record>

</odoo>
