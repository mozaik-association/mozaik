<odoo>

    <record model="ir.ui.view" id="event_form_view">
        <field name="model">event.event</field>
        <field name="name">event.event.form.view (in mozaik_event_website)</field>
        <field name="inherit_id" ref="website_event.event_event_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='website_id']" position="after">
                <field name="website_domain_ids" widget="many2many_tags" />
            </xpath>
        </field>
    </record>

</odoo>
