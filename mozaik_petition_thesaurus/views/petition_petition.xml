<odoo>

    <record model="ir.ui.view" id="petition_petition_form_view">
        <field name="name">petition.petition.form (in mozaik_petition_thesaurus)</field>
        <field name="model">petition.petition</field>
        <field name="inherit_id" ref="mozaik_petition.petition_petition_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_private']" position="before">
                <field name="interest_ids" string="Interests" widget="many2many_tags" />
            </xpath>
        </field>
    </record>



</odoo>
