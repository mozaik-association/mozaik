<odoo>

    <record model="ir.ui.view" id="mailing_mailing_form_view">
        <field
            name="name"
        >mailing.mailing.form (in mozaik_mass_mailing_template)</field>
        <field name="model">mailing.mailing</field>
        <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='body_html']" position="attributes">
                <attribute name="attrs">
                    {'invisible' : 1}
                </attribute>
            </xpath>
            <xpath expr="//field[@name='body_html']" position="before">
                <label for="mail_template_id" />
                <field
                    name="mail_template_id"
                    domain="[('model_id.model','=','res.partner')]"
                    attrs="{'readonly': [('state', 'in', ('sending', 'done'))]}"
                />
            </xpath>
            <xpath expr="//field[@name='body_arch']" position="attributes">
                <attribute name="options">
                    {'inline-field': 'body_html'}
                </attribute>
                <attribute name="widget">
                    html
                </attribute>
                <attribute name="class">
                    None
                </attribute>
            </xpath>
            <xpath expr="//field[@name='body_arch']" position="before">
                <separator />
                <label for="body_arch" string="Body" />
            </xpath>
            <xpath expr="//field[@name='body_arch']" position="after">
                 <button
                    type="object"
                    name="save_as_template"
                    string="Save as new template"
                    class="pull-right"
                    attrs="{'readonly': [('state', 'in', ('sending', 'done'))]}"
                />
            </xpath>

        </field>
    </record>



</odoo>
