<?xml version='1.0' encoding='UTF-8' ?>
<odoo>

    <record id="failure_editor_wizard" model="ir.ui.view">
        <field name="name">failure.editor.address.form (mozaik_address)</field>
        <field name="model">failure.editor.address</field>
        <field name="inherit_id" ref="mozaik_coordinate.failure_editor_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='increase']" position="after">
                <field name="reason" />
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="failure_editor_act_window">
        <field name="name">Failure Editor</field>
        <field name="view_mode">form</field>
        <field name="res_model">failure.editor.address</field>
        <field name="target">new</field>
        <field name="view_id" ref="mozaik_address.failure_editor_wizard" />
        <field name="binding_model_id" ref="mozaik_address.model_postal_coordinate" />
        <field name="groups_id" eval="[(6, 0, [ref('mozaik_coordinate.res_groups_coordinate_user')])]" />
    </record>

</odoo>
