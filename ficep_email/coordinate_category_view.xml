<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">

        <!-- Coordinate Category -->

        <record id="coordinate_category_form_view" model="ir.ui.view">
            <field name="name">coordinate.category.form (ficep_email)</field>
            <field name="model">coordinate.category</field>
            <field name="inherit_id" ref="ficep_coordinate.coordinate_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='buttons']" position="inside">
                    <button string="Email Coordinates"
                            name="%(email_coordinate_action)d"
                            type="action"
                            context="{'search_default_coordinate_category_id': active_id, 'default_coordinate_category_id': active_id}"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>