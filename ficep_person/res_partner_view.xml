<?xml version='1.0' encoding='UTF-8' ?>
<openerp>
    <data noupdate="0">

       <record id="res_partner_search_view" model="ir.ui.view">
            <field name="name">res.partner.search</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search string="Partner">
                    <field name="id" string="Number"/>
                    <field name="name"
                           filter_domain="['|',('display_name','ilike',self),('name','ilike',self)]"/>
                    <field string="Birthdate > ..." name="birth_date" filter_domain="[('birth_date','>', self)]" invisible="'default_is_company' not in context or context.get('default_is_company')" />
                    <field string="Birthdate &lt; ..." name="birth_date" filter_domain="[('birth_date','&lt;', self)]" invisible="'default_is_company' not in context or context.get('default_is_company')" />
                    <field name="competencies_m2m_ids" string="Competencies &amp; Topics" filter_domain="[('competencies_m2m_ids','ilike', self)]"/>
                    <field name="interests_m2m_ids" string="Interests" filter_domain="[('interests_m2m_ids','ilike', self)]" invisible="'default_is_company' not in context or context.get('default_is_company')"/>
                    <field name="category_id" string="Tag" filter_domain="[('category_id','ilike', self)]"/>
                    <field name="comment" />

                    <filter string="Natural Persons" name="type_person" domain="[('is_company','=',0)]" invisible="'default_is_company' in context"/>
                    <filter string="Legal Persons" name="type_company" domain="[('is_company','=',1)]" invisible="'default_is_company' in context"/>
                    <filter string="Assemblies" name="type_assembly" domain="[('is_assembly','=',1)]" invisible="'default_is_company' in context"/>
                    <separator />
                    <filter string="Male" name="male" domain="[('gender','=','m')]" invisible="'default_is_company' not in context or context.get('default_is_company')"/>
                    <filter string="Female" name="female" domain="[('gender','=','f')]" invisible="'default_is_company' not in context or context.get('default_is_company')"/>
                    <separator />
                    <filter string="French" name="french" domain="[('tongue','=','f')]" invisible="'default_is_company' not in context or context.get('default_is_company')"/>
                    <filter string="German" name="german" domain="[('tongue','=','g')]" invisible="'default_is_company' not in context or context.get('default_is_company')"/>
                    <separator />
                    <filter string="Employee" name="employee" domain="[('employee','!=',0)]" invisible="context.get('default_is_company')"/>
                    <filter string="Not Employee" name="not_employee" domain="[('employee','=',0)]" invisible="context.get('default_is_company')"/>
                    <filter string="User" name="user" domain="[('user_ids', '!=', False)]" invisible="context.get('default_is_company')"/>
                    <filter string="Not User" name="not_user" domain="[('user_ids', '=', False)]" invisible="context.get('default_is_company')"/>
                    <separator />
                    <filter name="duplicate" string="Duplicate" domain="[('is_duplicate_detected','=',True)]" />
                    <separator />
                    <filter name="expired" string="Expired"
                        context="{'invisible_expire_date': False}"
                        domain="[('active','=',False)]" help="Exprired Contacts" />
                    <filter name="all" string="All"
                        context="{'invisible_expire_date': False}"
                        domain="['|', ('active', '=', True), ('active', '!=', True)]" help="All Contacts, expired or not" />

                    <group expand="0" string="Group By..." name="group_by">
                        <filter string="Gender" context="{'group_by': 'gender'}" invisible="'default_is_company' not in context or context.get('default_is_company')"/>
                        <filter string="Tongue" context="{'group_by': 'tongue'}" invisible="'default_is_company' not in context or context.get('default_is_company')"/>
                        <filter string="Country" context="{'group_by': 'country_id'}"/>
                    </group>
               </search>
            </field>
        </record>

        <record id="view_partner_tree" model="ir.ui.view">
            <field name="name">res.partner.tree (ficep_person)</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree" />
            <field name="arch" type="xml">

                <xpath expr="//tree" position="attributes">
                    <attribute name="colors">grey:active==False;red:is_duplicate_detected==True</attribute>
                </xpath>

                <xpath expr="//field[@name='display_name']" position="after">
                    <field name="birth_date" invisible="'default_is_company' not in context or context.get('default_is_company')" />
                </xpath>

                <xpath expr="//field[@name='country']" position="replace"/><!-- rid off this replace when oe will drop definitvely deprecated country field -->
                <xpath expr="//field[@name='function']" position="replace"/>

                <xpath expr="//field[@name='user_id']" position="replace">
                    <field name="active" invisible="1" />
                </xpath>

                <xpath expr="//field[@name='parent_id']" position="replace">
                    <field name="id" />

                    <field name="is_duplicate_detected" invisible="1"/>
                    <field name="is_duplicate_allowed" invisible="1"/>
                    <button name="button_undo_allow_duplicate" string="Undo Allow Duplicate" type="object"
                            groups="ficep_base.ficep_res_groups_user"
                            attrs="{'invisible': [('is_duplicate_allowed','=',False)]}"
                            icon="gtk-undo"
                            confirm="Undo allow duplicate: proceed anyway ?" />

                    <field name="expire_date"
                           invisible="context.get('invisible_expire_date', True)" />

                    <field name="gender" invisible="1"/>
                    <field name="tongue" invisible="1"/>
                </xpath>

            </field>
        </record>

        <record id="natural_res_partner_action" model="ir.actions.act_window">
            <field name="name">Natural Persons</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_company', '=', False)]</field>
            <field name="context">{'default_is_company': False, 'mail_create_nosubscribe': True}</field>
            <field name="search_view_id" ref="res_partner_search_view" />
        </record>

        <record id="legal_res_partner_action" model="ir.actions.act_window">
            <field name="name">Legal Persons</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_company', '=', True),('is_assembly', '=', False)]</field>
            <field name="context">{'default_is_company': True, 'mail_create_nosubscribe': True}</field>
            <field name="search_view_id" ref="res_partner_search_view" />
        </record>

        <record id="all_res_partner_action" model="ir.actions.act_window">
            <field name="name">All Contacts</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{'mail_create_nosubscribe': True}</field>
            <field name="search_view_id" ref="res_partner_search_view" />
        </record>

        <record id="view_partner_form_firstname" model="ir.ui.view">
            <field name="name">res.partner.form.firstname (ficep_person)</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="partner_firstname.view_partner_form_firstname" />
            <field name="arch" type="xml">

                <field name="name" position="attributes">
                    <attribute name="attrs">{'readonly': ['|',('is_company', '=', False),('is_assembly', '=', True)], 'required': [('is_company', '=', True),('is_assembly', '=', False)]}</attribute>
                </field>

                <xpath expr="//group[field[@name='lastname']]" position="replace"/>

            </field>
        </record>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form (ficep_person)</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">

                <xpath expr="//sheet" position="before">
                    <header>
                        <div attrs="{'invisible': ['|',('id','=',False),('active','=',False)]}"
                             invisible="context.get('simplified')"
                             groups="ficep_base.ficep_res_groups_user">
                            <button name="button_undo_allow_duplicate" string="Undo Allow Duplicate" type="object"
                                    attrs="{'invisible': [('is_duplicate_allowed','=',False)]}"
                                    confirm="Undo allow duplicate: proceed anyway ?" />
                            <button name="button_invalidate" string="Invalidate" type="object"
                                    confirm="Invalidate contact: proceed anyway ?" />
                        </div>
                    </header>
                </xpath>

                <xpath expr="//div[@class='oe_edit_only']" position="before">
                    <h1><label string="#" attrs="{'invisible': [('id', '=', False)]}"/><field name="id" class="oe_inline"/></h1>
                </xpath>
                <xpath expr="//div[@class='oe_edit_only']" position="replace">
                    <div name="title" class="oe_edit_only">
                        <label for="name" attrs="{'invisible': [('is_company', '=', False)]}" />
                        <span invisible="'default_is_company' in context" attrs="{'invisible': [('id', '!=', False)]}">(<field name="is_company" on_change="onchange_type(is_company)" attrs="{'readonly': [('id', '!=', False)]}" class="oe_inline"/> <label for="is_company" string="Is a Company?"/>)</span>
                    </div>
                </xpath>

                <xpath expr="//field[@name='category_id']" position="replace"/>

                <xpath expr="//div[@name='buttons']" position="after">
                    <group name="firstlast" attrs="{'invisible': [('is_company', '=', True)]}">
                        <group name="official">
                            <field name="lastname" attrs="{'required': [('is_company', '=', False)]}" />
                            <field name="firstname" />
                        </group>
                        <group name="usual">
                            <field name="usual_lastname" />
                            <field name="usual_firstname" />
                        </group>
                    </group>
                </xpath>

                <xpath expr="//field[@name='parent_id']" position="replace"/>
                <xpath expr="//field[@name='title']" position="replace" />
                <xpath expr="//field[@name='website']" position="replace" />
                <xpath expr="//field[@name='function']" position="replace"/>

                <xpath expr="//group[field[@name='user_ids']]" position="after">
                    <group name="person1" attrs="{'invisible': [('is_company','=', True)]}">
                        <field name="birth_date" />
                        <field name="gender" />
                    </group>
                    <group name="person2" attrs="{'invisible': [('is_company','=', True)]}">
                        <field name="tongue" />
                        <field name="employee" />
                    </group>
                    <group name="validity" attrs="{'invisible': [('id','=',False)]}">
                        <field name="create_date" />
                        <field name="expire_date" attrs="{'invisible': [('active','=',True)]}" />
                    </group>
                    <group name="duplicate">
                        <label for="is_duplicate_detected" attrs="{'invisible': [('is_duplicate_detected','=',False)]}"/>
                        <div attrs="{'invisible': [('is_duplicate_detected','=',False)]}">
                            <field name="is_duplicate_detected" class="oe_inline" />
                            <button name="%(all_res_partner_action)d" type="action" class="oe_red_link" string="â‡’ Show all duplicates"
                                    context="{'search_default_duplicate': True,'search_default_name': name}"/>
                        </div>

                        <field name="is_duplicate_allowed" attrs="{'invisible': [('is_duplicate_allowed','=',False)]}" />
                    </group>
                </xpath>

                <xpath expr="//field[@name='user_ids']" position="replace"/>

                <xpath expr="//page[@string='Contacts']" position="replace"/>
                <xpath expr="//page[@name='sales_purchases']" position="attributes">
                    <attribute name="groups">ficep_base.res_groups_developper</attribute>
                </xpath>
                <xpath expr="//page[@name='internal_notes']" position="inside">
                    <group name="all">
                        <group name="site">
                            <field name="website" widget="url"/>
                            <field name="secondary_website" widget="url"/>
                        </group>
                        <group name="social">
                            <field name="twitter"/>
                            <field name="facebook"/>
                        </group>
                    </group>
                    <group name="partner_title">
                        <field name="title" domain="[('domain', '=', 'contact')]" options="{&quot;no_open&quot;: True}" context="{'default_domain': 'contact'}" attrs="{'invisible': [('is_company','=', True)]}"/>
                        <field name="title" domain="[('domain', '=', 'partner')]" options="{&quot;no_open&quot;: True}" context="{'default_domain': 'partner'}" attrs="{'invisible': [('is_company','=', False)]}"/>
                    </group>
                    <group name="contact" attrs="{'invisible': [('is_company','=', True)]}">
                        <group name="status">
                            <field name="function"/>
                            <field name="civil_status"/>
                        </group>
                        <group name="ldap" attrs="{'invisible': [('user_ids','=',[])]}" groups="ficep_base.ficep_res_groups_configurator">
                            <field name="ldap_name" />
                            <field name="ldap_id" />
                        </group>
                    </group>
                    <group name="partner" attrs="{'invisible': [('is_company','=', False)]}">
                    </group>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page name="index" string="Indexation">
                        <separator string="Competencies" attrs="{'invisible': [('is_company','=',True)]}" />
                        <separator string="Topics" attrs="{'invisible': [('is_company','=',False)]}" />
                        <field name="competencies_m2m_ids" widget="many2many_tags" placeholder="Terms..." />
                        <separator string="Interests" attrs="{'invisible': [('is_company','=',True)]}" />
                        <field name="interests_m2m_ids" widget="many2many_tags" attrs="{'invisible': [('is_company','=',True)]}" placeholder="Terms..." />
                        <separator string="Tags" />
                        <field name="category_id" widget="many2many_tags" placeholder="Tags..."/>
                        <!-- Some blank lines to see the entire elapsed many2many_tags widget -->
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                    </page>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page name="relation" string="Relations">
                        <separator string="Relation Where Partner Is Subject" />
                        <field name="partner_is_subject_relation_ids" context="{'default_subject_partner_id': active_id,
                                                                 'simplified': 1,
                                                                 'form_view_ref': 'ficep_person.partner_relation_form_view'}"
                           attrs="{'invisible': [('active','=',False)], 'readonly': [('id','=',False)]}">
                            <tree>
                                <field name="partner_relation_category_id"/>
                                <field name="object_partner_id" />
                            </tree>
                        </field>
                        <separator string="Relation Where Partner Is Object" />
                        <field name="partner_is_object_relation_ids" context="{'default_object_partner_id': active_id,
                                                                 'simplified': 1,
                                                                 'object': True,
                                                                 'form_view_ref': 'ficep_person.partner_relation_form_view'}"
                            attrs="{'invisible': [('active','=',False)], 'readonly': [('id','=',False)]}">
                            <tree>
                                <field name="partner_relation_category_id"/>
                                <field name="subject_partner_id" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_emails_partner_info_form" model="ir.ui.view">
            <field name="name">res.partner.emails.info.inherit (ficep_person)</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="mail.view_emails_partner_info_form" />
            <field name="arch" type="xml">

                <xpath expr="//div[@class='oe_chatter']" position="replace">
                    <div name="dev" class="oe_form_sheetbg" groups="ficep_base.res_groups_developper">
                        <div class="oe_formview oe_form_sheet_width">
                            <h3>More Info</h3>
                            <group name="moreinfo">
                                <field name="display_name" />
                                <field name="printable_name" />
                                <field name="is_assembly" />
                                <field name="tz" />
                                <field name="user_ids" attrs="{'invisible': [('user_ids','=',[])]}" />
                            </group>
                        </div>
                    </div>

                    <div name="chat" class="oe_chatter" invisible="context.get('simplified')">
                        <field name="message_follower_ids" widget="mail_followers" groups="ficep_base.ficep_res_groups_configurator"/>
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </xpath>

            </field>
        </record>

    </data>
</openerp>
