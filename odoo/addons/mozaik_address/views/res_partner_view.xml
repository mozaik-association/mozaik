<?xml version='1.0' encoding='UTF-8' ?>
<odoo>

    <record id="view_partner_tree" model="ir.ui.view">
        <field name="name">res.partner.tree (mozaik_address)</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="address" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form (mozaik_address)</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="mozaik_coordinate.res_partner_form_view" />
        <field name="arch" type="xml">

            <xpath expr="//label[@for='street']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//div[hasclass('o_address_format')]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//div[hasclass('o_address_format')]" position="after">
                <field name="address" attrs="{'invisible': [('address', '=', 'VIP')]}"/>
            </xpath>

            <xpath expr="//div[hasclass('o_address_format')]" position="after">
                <field name="postal_coordinate_id" attrs="{'invisible': [('address', '!=', 'VIP')]}" groups="mozaik_coordinate.res_groups_coordinate_vip_reader"/>
            </xpath>

            <xpath expr="//page[@name='coordinates']" position="inside">
                <span name="address" class="oe_horizontal_separator oe_clear oe_inline">
                    Postal Coordinates
                </span>
                <button class="oe_right" string="All Details" name="%(postal_coordinate_action)d"
                        type="action" attrs="{'invisible': [('id','=',False)]}"
                        context="{'search_default_partner_id': active_id,
                                  'default_partner_id': active_id,
                                  'search_default_all': True}" />
                <field name="postal_coordinate_ids" context="{'default_partner_id': active_id}"
                       attrs="{'invisible': [('active','=',False)], 'readonly': [('id','=',False)]}">
                    <tree decoration-danger="unauthorized==True" decoration-warning="is_duplicate_detected==True">
                        <field name="address_id"/>
                        <field name="coordinate_category_id" />
                        <field name="is_main" />
                        <field name="unauthorized" />
                        <field name="vip" groups="mozaik_coordinate.res_groups_coordinate_vip_reader" />
                        <field name="failure_counter" attrs="{'invisible': [('failure_counter','=',0)]}" />
                        <field name="is_duplicate_detected" invisible="1"/>
                        <field name="co_residency_id"/>
                    </tree>
                </field>
                <field name="postal_coordinate_inactive_ids"
                       readonly="1" attrs="{'invisible': [('active','=',True)]}">
                    <tree decoration-danger="unauthorized==True">
                        <field name="address_id"/>
                        <field name="coordinate_category_id" />
                        <field name="is_main" />
                        <field name="unauthorized" />
                        <field name="vip" groups="mozaik_coordinate.res_groups_coordinate_vip_reader" />
                        <field name="failure_counter" attrs="{'invisible': [('failure_counter','=',0)]}" />
                    </tree>
                </field>
            </xpath>

        </field>
    </record>

</odoo>
