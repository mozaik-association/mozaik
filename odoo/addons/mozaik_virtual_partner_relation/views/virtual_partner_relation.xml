<odoo>

    <record id="virtual_partner_relation_tree_view" model="ir.ui.view">
        <field name="name">virtual.partner.relation.tree</field>
        <field name="model">virtual.partner.relation</field>
        <field name="inherit_id" ref="mozaik_communication.abstract_virtual_model_tree_view"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <field name="birth_date" position="before">
                <field name="relation_category_id" />
                <field name="object_partner_id" />
            </field>
        </field>
    </record>

    <record id="virtual_partner_relation_search_view" model="ir.ui.view">
        <field name="name">virtual.partner.relation.search</field>
        <field name="model">virtual.partner.relation</field>
        <field name="arch" type="xml">
            <search>
                <field name="identifier" />
                <!-- pylint: disable=duplicate-xml-fields -->
                <field string="Birth Date > ..." name="birth_date" filter_domain="[('birth_date','>',self)]" />
                <field string="Birth Date &lt; ..." name="birth_date" filter_domain="[('birth_date','&lt;',self)]" />
                <field name="partner_id" />
                <field name="int_instance_id" />
                <field name="int_instance_id" string="Internal Instance descending of..." operator="child_of"/>
                <field name="int_instance_id" string="Internal Instance not descending of..." operator="not child_of"/>
                <field name="relation_category_id" />
                <field name="object_partner_id" />
                <field name="lang" />
                <field name="interest_ids" widget="many2one" />
                <field name="competency_ids" string="Competencies &amp; Topics" widget="many2one" />

                <filter string="Natural Persons" name="type_person" domain="[('is_company','=',0)]" />
                <filter string="Legal Persons" name="type_company" domain="[('is_company','!=',0)]" />
                <filter string="Assemblies" name="type_assembly" domain="[('is_assembly','!=',0)]" />
                <separator />
                <filter string="Male" name="male" domain="[('gender','=','male')]" />
                <filter string="Female" name="female" domain="[('gender','=','female')]" />
                <separator />
                <filter string="Employee" name="employee" domain="[('employee','!=',0)]" />
                <filter string="Not Employee" name="not_employee" domain="[('employee','=',0)]" />
                <separator />
                <filter name="p_vip" string="VIP Address" domain="[('postal_vip','=',True)]" groups="mozaik_base.mozaik_res_groups_vip_reader" />
                <separator />
                <filter name="e_vip" string="VIP Email" domain="[('email_vip','=',True)]" groups="mozaik_base.mozaik_res_groups_vip_reader" />
                <separator />
                <filter name="p_unauthorized" string="Unauthorized Address" domain="[('postal_unauthorized','=',True)]" />
                <separator />
                <filter name="e_unauthorized" string="Unauthorized Email" domain="[('email_unauthorized','=',True)]" />
                <separator />
                <filter name="without_coordinate" string="Without Coordinate" domain="[('active','=',False)]" />
                <group expand="0" string="Group By..." name="group_by">
                    <filter name="partner" string="Partner" context="{'group_by':'partner_id'}" />
                    <filter name="int_instance" string="Internal Instance" context="{'group_by':'int_instance_id'}" />
                    <filter name="relation_category" string="Relation Category" context="{'group_by':'relation_category_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="add_filter_from_relation_action" model="ir.actions.act_window">
        <field name="name">Add Filter To Distribution List</field>
        <field name="view_mode">form</field>
        <field name="src_model">virtual.partner.relation</field>
        <field name="res_model">distribution.list.add.filter</field>
        <field name="multi" eval="1" />
        <field name="target">new</field>
        <field name="view_id" ref="distribution_list.distribution_list_add_filter" />
        <field name="binding_model_id" ref="mozaik_virtual_partner_relation.model_virtual_partner_relation" />
        <field name="groups_id"
               eval="[(6, 0, [ref('mozaik_communication.res_groups_communication_user')])]" />
    </record>

    <record id="virtual_partner_relation_action" model="ir.actions.act_window">
        <field name="name">Partners/Relations</field>
        <field name="res_model">virtual.partner.relation</field>
        <field name="view_mode">tree</field>
        <field name="search_view_id" ref="virtual_partner_relation_search_view" />
        <field name="view_id" ref="virtual_partner_relation_tree_view" />
    </record>

    <record model="ir.ui.menu" id="virtual_partner_relation_menu" >
        <field name="name">Partners/Relations</field>
        <field name="sequence" eval="50"/>
        <field name="parent_id" ref="mozaik_communication.virtual_model_menu" />
        <field name="action" ref="virtual_partner_relation_action" />
    </record>

</odoo>
