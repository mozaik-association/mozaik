<odoo>

    <record model="ir.ui.view" id="partner_involvement_category_form_view">
        <field name="name">partner.involvement.category.form (in mozaik_involvement)</field>
        <field name="model">partner.involvement.category</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <div attrs="{'invisible': ['|',('id','=',False),('active','=',False)]}">
                    </div>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive"
                                confirm="Archive/reactivate category: proceed anyway?"
                                groups="mozaik_abstract_model.res_groups_archiving_manager">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                        </button>
                        <button string="Involvements"
                                name="%(partner_involvement_act_window)d"
                                type="action"
                                context="{'search_default_involvement_category_id': active_id,
                                          'default_involvement_category_id': active_id}"/>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group name="data" >
                        <group name="data1">
                            <field name="involvement_type" />
                            <field name="allow_multi" />
                            <field name="code" />
                        </group>
                        <group name="data2">
                            <field name="interest_ids" widget="many2many_tags" options="{'no_create_edit': True}" />
                        </group>
                    </group>
                    <group name="state" attrs="{'invisible': [('id','=',False)]}">
                        <group name="validity">
                            <field name="create_date" />
                            <field name="expire_date" attrs="{'invisible': [('active','=',True)]}" />
                        </group>
                        <group name="other">
                        </group>
                    </group>

                    <notebook>
                        <page name="notes" string="Notes" autofocus="autofocus">
                            <field name="note" />
                        </page>
                        <page name="security" string="Security">
                            <group name="owners">
                                <field name="res_users_ids" widget="many2many_tags" options="{'no_create_edit': True}" context="{'bypass_ir_rule': 'read'}"/>
                            </group>
                            <div class="oe_clear">
                                <br />
                                <br />
                                <br />
                                <br />
                            </div>
                        </page>
                        <page string="More Info" name="dev" groups="base.group_erp_manager">
                            <group name="moreinfo"/>
                        </page>
                    </notebook>
                </sheet>
                <div name="chat" class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="mozaik_abstract_model.res_groups_follower_manager"/>
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="partner_involvement_category_search_view">
        <field name="name">partner.involvement.category.search (in mozaik_involvement)</field>
        <field name="model">partner.involvement.category</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="involvement_type"/>
                <field name="note"/>
                <field name="interest_ids" widget="many2one" />

                <filter name="without_type" string="Without Type"
                    domain="[('involvement_type', '=', False)]"/>
                <separator/>
                <filter name="allow_multi" string="Allow Multiple Involvements"
                    domain="[('allow_multi', '=', True)]"/>
                <separator/>
                <filter name="my_categories" string="My Categories"
                    domain="[('res_users_ids', 'in', [uid])]"
                    help="Categories of which I am an owner" />
                <separator/>
                <filter name="expired" string="Expired"
                    context="{'invisible_expire_date': False}"
                    domain="[('active','=',False)]" help="Expired Categories" />
                <filter name="all" string="All"
                    context="{'invisible_expire_date': False}"
                    domain="['|', ('active', '=', True), ('active', '!=', True)]"
                    help="All Categories, expired or not" />

                <group expand="0" string="Group By..." name="group_by">
                    <filter name="involvement_type" string="Type" context="{'group_by': 'involvement_type'}"/>
                </group>
           </search>
        </field>
    </record>

    <record model="ir.ui.view" id="partner_involvement_category_tree_view">
        <field name="name">partner.involvement.category.tree (in mozaik_involvement)</field>
        <field name="model">partner.involvement.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="involvement_type" />
                <field name="allow_multi" />
                <field name="code"/>
                <field name="expire_date" invisible="context.get('invisible_expire_date', True)" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="partner_involvement_category_act_window">
        <field name="name">Involvement Categories</field>
        <field name="res_model">partner.involvement.category</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" eval="partner_involvement_category_tree_view"/>
        <field name="search_view_id" ref="partner_involvement_category_search_view" />
    </record>

</odoo>
