<odoo>
    <record id="distribution_list_search" model="ir.ui.view">
        <field name="name">distribution.list.search (mozaik_communication)</field>
        <field name="model">distribution.list</field>
        <field name="inherit_id" ref="mass_mailing_distribution_list.distribution_list_search" />
        <field name="arch" type="xml">
            <field name="dst_model_id" position="replace"/>
            <field name="note" position="replace"/>
            <field name="alias_name" position="replace">
                <field name="code"/>
                <field name="note"/>
                <field name="alias_id"/>
                <field name="int_instance_id"/>
                <field name="partner_id"/>
            </field>
            <filter name="dst_model" position="replace">
                <filter name="instance" string="Internal Instance" domain="[]" context="{'group_by':'int_instance_id'}" />
            </filter>
            <filter name="newsletter" position="before">
                <filter name="my_lists" string="My Lists" domain="[('res_users_ids', 'in', [uid])]" help="Distribution Lists of which I am an owner" />
                <separator/>
            </filter>
            <filter name="newsletter" position="after">
                <separator/>
                <filter name="public" string="Public Newsletters" domain="[('newsletter','=',True),('public','=',True)]"/>
            </filter>
            <filter name="mail_forwarding" position="after">
                <separator/>
                <filter name="expired" string="Expired" context="{'invisible_expire_date': False}" domain="[('active','=',False)]" help="Expired Distribution Lists" />
                <filter name="all" string="All" context="{'invisible_expire_date': False}" domain="['|', ('active', '=', True), ('active', '!=', True)]" help="All Distribution Lists, expired or not" />
            </filter>
        </field>
    </record>

    <record id="distribution_list_tree" model="ir.ui.view">
        <field name="name">distribution.list.tree (mozaik_communication)</field>
        <field name="model">distribution.list</field>
        <field name="inherit_id" ref="mass_mailing_distribution_list.distribution_list_tree" />
        <field name="arch" type="xml">
            <field name="name" position="replace">
                <field name="partner_id"/>
                <field name="dst_model_id" invisible="1"/>
                <field name="int_instance_id"/>
                <field name="active" invisible="1"/>
            </field>

            <!-- No more mass mailing but mass function in our case -->
            <button name="mass_mailing" position="replace">
                <button name="%(distribution_list_mass_function_action)d" type="action" string="Mass Action" attrs="{'invisible':[('active', '=', False)]}"/>
                <field name="expire_date" invisible="context.get('invisible_expire_date', True)" />
            </button>

            <button name="get_action_from_domains" position="replace">
                <button name="get_action_from_domains" attrs="{'invisible':[('active', '=', False)]}" string="See Distribution List Result" type="object"/>
            </button>

            <button name="get_action_from_domains" position="after">
                <button name="get_all_without_coordinates" attrs="{'invisible':[('active', '=', False)]}" string="See Distribution List Result without Coordinates" type="object"/>
            </button>
        </field>
    </record>

    <record id="distribution_list_form" model="ir.ui.view">
        <field name="name">distribution.list.form (mozaik_communication)</field>
        <field name="model">distribution.list</field>
        <field name="inherit_id" ref="mass_mailing_distribution_list.distribution_list_form" />
        <field name="arch" type="xml">

            <!-- Rebuild header -->
            <header position="replace">
                <header>
                    <div attrs="{'invisible': ['|',('id','=',False),('active','=',False)]}" invisible="context.get('popup')" groups="mozaik_base.mozaik_res_groups_user">
                        <button name="action_invalidate" string="Invalidate" type="object" confirm="Invalidate Distribution List: proceed anyway?" />
                    </div>
                </header>
            </header>

            <xpath expr="//group[field[@name='dst_model_id']]" position="replace">
                <group name="newsletter1">
                    <field name="newsletter"/>
                </group>
            </xpath>

            <xpath expr="//group[field[@name='bridge_field']]" position="replace">
                <group name="newsletter2">
                    <field name="public" attrs="{'invisible': [('newsletter', '=', False)]}"/>
                    <field name="code" attrs="{'invisible': [('newsletter', '=', False)]}"/>
                </group>
            </xpath>

            <group name="group_alias" position="inside">
                <field name="partner_id"/>
            </group>

            <group name="info" position="after">
                <group name="status" attrs="{'invisible': [('id','=',False)]}">
                    <group name="validity">
                        <field name="create_date" />
                        <field name="expire_date" attrs="{'invisible': [('active','=',True)]}" />
                    </group>
                    <group name="other">
                    </group>
                </group>
            </group>

            <xpath expr="//field[@name='to_include_distribution_list_line_ids']//button[@name='get_list_from_domain']" position="after">
                <button name="get_list_without_coordinate_from_domain" string="See Result Without Coordinate" type="object"/>
            </xpath>

            <!-- Add user tree into distribution list form -->
            <notebook position="inside">
                <page name="security" string="Security" autofocus="autofocus" groups="mozaik_base.mozaik_res_groups_user">
                    <group name="validity">
                        <field name="int_instance_id" />
                        <field name="res_users_ids" widget="many2many_tags" options="{'no_create_edit': True}" />
                        <field name="res_partner_m2m_ids" widget="many2many_tags" options="{'no_create_edit': True}" />
                    </group>
                    <div class="oe_clear">
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                    </div>
                </page>
            </notebook>

            <!-- Add developper tools and chatter -->
            <form postition="inside">
                <div name="dev" class="oe_form_sheetbg" groups="mozaik_base.res_groups_developper">
                    <div class="oe_formview oe_form_sheet_width">
                        <h3>More Info</h3>
                        <div attrs="{'invisible': ['|',('id','=',False),('active','=',True)]}">
                            <button name="action_revalidate" string="Validate" type="object" confirm="Reactivate document: proceed anyway?" />
                        </div>
                        <button name="mass_mailing" type="object" string="Direct Mass Mailing"/>
                        <group name="moreinfo">
                            <field name="id"/>
                            <field name="active"/>
                            <field name="company_id"/>
                            <field name="dst_model_id" domain="[('model', 'in', ['virtual.target', 'res.partner'])]"/>
                            <field name="bridge_field"/>
                            <field name="partner_path" attrs="{'required':[('newsletter','=', True)]}" />
                        </group>
                    </div>
                </div>
                <div name="chat" class="oe_chatter" invisible="context.get('popup')">
                    <field name="message_follower_ids" widget="mail_followers" groups="mozaik_base.mozaik_res_groups_configurator"/>
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
            <field name="alias_id" position="attributes">
                <attribute name="options" translation="off">{'no_open':True}</attribute>
            </field>
        </field>
    </record>
</odoo>
