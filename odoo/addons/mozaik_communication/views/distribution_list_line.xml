<odoo>
    <record id="distribution_list_line_search" model="ir.ui.view">
        <field name="name">distribution.list.line.search (mozaik_communication)</field>
        <field name="model">distribution.list.line</field>
        <field name="inherit_id" ref="distribution_list.distribution_list_line_search" />
        <field name="arch" type="xml">
            <field name="src_model_id" position="after">
                <filter name="expired" string="Expired" context="{'invisible_expire_date': False}" domain="[('active','=',False)]" help="Expired Filters" />
                <filter name="all" string="All" context="{'invisible_expire_date': False}" domain="['|', ('active', '=', True), ('active', '!=', True)]" help="All Filters, expired or not" />
            </field>
        </field>
    </record>

    <record id="distribution_list_line_tree" model="ir.ui.view">
        <field name="name">distribution.list.line.tree (mozaik_communication)</field>
        <field name="model">distribution.list.line</field>
        <field name="inherit_id" ref="distribution_list.distribution_list_line_tree" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="active" invisible="1"/>
            </field>
            <button name="get_list_from_domain" position="replace">
                <button name="get_list_from_domain" attrs="{'invisible':[('active', '=', False)]}" string="See Filter Result" type="object"/>
                <button name="get_list_without_coordinate_from_domain" attrs="{'invisible':[('active', '=', False)]}" string="See Result Without Coordinate" type="object"/>
            </button>
        </field>
    </record>

    <record id="distribution_list_line_form" model="ir.ui.view">
        <field name="name">distribution.list.line.form (mozaik_communication)</field>
        <field name="model">distribution.list.line</field>
        <field name="inherit_id" ref="distribution_list.distribution_list_line_form" />
        <field name="arch" type="xml">
            <!-- Rebuild header -->
            <header position="replace">
                <header>
                    <div attrs="{'invisible': ['|',('id','=',False),('active','=',False)]}" invisible="context.get('popup')" groups="mozaik_base.mozaik_res_groups_user">
                        <button name="action_invalidate" string="Invalidate" type="object" confirm="Invalidate Filter: proceed anyway?" />
                        <button name="get_list_from_domain" class="oe_read_only" type="object" string="See Filter Result" />
                        <button name="get_list_without_coordinate_from_domain" class="oe_read_only" string="See Result Without Coordinate" type="object"/>
                    </div>
                </header>
            </header>

            <button name="action_partner_selection" position="attributes">
                <attribute name="attrs" translation="off">{'invisible':[('active', '=', False)]}</attribute>
                <attribute name="groups" translation="off">mozaik_base.mozaik_res_groups_user</attribute>
            </button>

            <field name="src_model_id" position="attributes">
                <attribute name="widget" translation="off">selection</attribute>
            </field>

            <field name="domain" position="attributes">
                <attribute name="readonly" translation="off">not context.get('is_developper')</attribute>
            </field>

            <sheet position="inside">
                <group name="status" attrs="{'invisible': [('id','=',False)]}">
                    <group name="validity">
                        <field name="create_date" />
                        <field name="expire_date" attrs="{'invisible': [('active','=',True)]}" />
                    </group>
                    <group name="other">
                    </group>
                </group>
                <separator string="Included in following distribution lists:"/>
                <field name="distribution_list_in_ids" widget="many2many_tags" readonly="1" context="{'active_test': False}"/>
                <separator string="Excluded from following distribution lists:"/>
                <field name="distribution_list_out_ids" widget="many2many_tags" readonly="1" context="{'active_test': False}"/>
            </sheet>

            <!-- Add user tree into distribution list form -->
            <form position="inside">
                <div name="dev" class="oe_form_sheetbg" groups="mozaik_base.res_groups_developper">
                    <div class="oe_formview oe_form_sheet_width">
                        <h3>More Info</h3>
                        <div attrs="{'invisible': ['|',('id','=',False),('active','=',True)]}">
                            <button name="action_revalidate" string="Validate" type="object"
                                    confirm="Reactivate document: proceed anyway?" />
                        </div>
                        <group name="moreinfo">
                            <field name="id"/>
                            <field name="active"/>
                        </group>
                    </div>
                </div>
                <div name="chat" class="oe_chatter" invisible="context.get('popup')">
                    <field name="message_follower_ids" widget="mail_followers" groups="mozaik_base.mozaik_res_groups_configurator"/>
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>

        </field>
    </record>

    <!-- Merge Distribution List: only for Mozaik Users -->

    <record id="distribution_list.merge_distribution_list_action" model="ir.actions.act_window">
        <field name="groups_id" eval="[(6, 0, [ref('mozaik_base.mozaik_res_groups_user')])]" />
    </record>
</odoo>
