<odoo>
    <record id="virtual_partner_involvement_tree_view" model="ir.ui.view">
        <field name="name">virtual.partner.involvement.tree</field>
        <field name="model">virtual.partner.involvement</field>
        <field name="inherit_id" ref="mozaik_communication.abstract_virtual_target_tree_view"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <field name="int_instance_id" position="after">
                <field name="involvement_category_id"/>
                <field name="involvement_type"/>
            </field>
            <field name="lang" position="after">
                <field name="is_donor"/>
                <field name="is_volunteer"/>
            </field>
        </field>
    </record>

    <record id="virtual_partner_involvement_search_view" model="ir.ui.view">
        <field name="name">virtual.partner.involvement.search</field>
        <field name="model">virtual.partner.involvement</field>
        <field name="arch" type="xml">
            <search>
                <field name="identifier" />
                <!-- pylint: disable=duplicate-xml-fields -->
                <field string="Birth Date > ..." name="birth_date" filter_domain="[('birth_date','>',self)]" />
                <field string="Birth Date &lt; ..." name="birth_date" filter_domain="[('birth_date','&lt;',self)]" />
                <field name="partner_id" />
                <field name="int_instance_id" />
                <field name="int_instance_id" string="Internal Instance descending of..." operator="child_of"/>
                <field name="int_instance_id" string="Internal Instance not descending of..." operator="not child_of"/>
                <field name="involvement_category_id" />
                <field name="involvement_type"/>
                <field string="Involvement Date > ..." name="effective_time" filter_domain="[('effective_time','>',self)]" />
                <field string="Involvement Date &lt; ..." name="effective_time" filter_domain="[('effective_time','&lt;',self)]" />
                <field name="interest_ids" widget="many2one" />
                <field name="competency_ids" string="Competencies &amp; Topics" widget="many2one" />
                <field name="nationality_id"/>
                <field name="lang"/>
                <filter string="Natural Persons" name="type_person" domain="[('is_company','=',0)]" />
                <filter string="Legal Persons" name="type_company" domain="[('is_company','!=',0)]" />
                <separator />
                <filter string="Male" name="male" domain="[('gender','=','male')]" />
                <filter string="Female" name="female" domain="[('gender','=','female')]" />
                <separator />
                <filter string="Donor" name="donor" domain="[('is_donor','=',True)]" />
                <separator />
                <filter string="Volunteer" name="volunteer" domain="[('is_volunteer','=',True)]" />
                <separator />
                <filter string="Employee" name="employee" domain="[('employee','!=',0)]" />
                <filter string="Not Employee" name="not_employee" domain="[('employee','=',0)]" />
                <separator/>
                <filter name="without_type" string="Involvement Without Type" domain="[('involvement_type', '=', False)]"/>
                <separator/>
                <filter name="promise" string="Promise" domain="[('promise', '=', True)]"/>
                <filter name="donation" string="Donation" domain="[('promise', '=', False), ('involvement_type', 'in', ['donation'])]"/>
                <separator/>
                <filter string="Local Voluntary" name="local_voluntary" domain="[('local_voluntary','=', True)]" />
                <filter string="Regional Voluntary" name="regional_voluntary" domain="[('regional_voluntary','=', True)]" />
                <filter string="National Voluntary" name="national_voluntary" domain="[('national_voluntary','=', True)]" />
                <filter string="Non Local Voluntary" name="non_local_voluntary" domain="[('local_voluntary','=', False)]" />
                <filter string="Non Regional Voluntary" name="non_regional_voluntary" domain="[('regional_voluntary','=', False)]" />
                <filter string="Non National Voluntary" name="non_national_voluntary" domain="[('national_voluntary','=', False)]" />
                <separator/>
                <filter string="Local Only" name="local_only" domain="[('local_only','=', True)]" />
                <filter string="Not Local Only" name="not_local_only" domain="[('local_only','=', False)]" />
                <separator />
                <filter name="p_vip" string="VIP Address" domain="[('postal_vip','=',True)]" groups="mozaik_base.mozaik_res_groups_vip_reader" />
                <separator />
                <filter name="e_vip" string="VIP Email" domain="[('email_vip','=',True)]" groups="mozaik_base.mozaik_res_groups_vip_reader" />
                <separator />
                <filter name="p_unauthorized" string="Unauthorized Address" domain="[('postal_unauthorized','=',True)]" />
                <separator />
                <filter name="e_unauthorized" string="Unauthorized Email" domain="[('email_unauthorized','=',True)]" />
                <separator />
                <filter name="without_coordinate" string="Without Coordinate" domain="[('active','=',False)]" />

                <group name="group_by">
                    <filter name="partner" string="Partner" context="{'group_by':'partner_id'}" />
                    <filter name="int_instance" string="Internal Instance" context="{'group_by':'int_instance_id'}" />
                    <filter name="involvement_category" string="Involvement Category" context="{'group_by':'involvement_category_id'}" />
                    <filter name="involvement_type" string="Involvement Type" context="{'group_by': 'involvement_type'}"/>
                    <filter name="involvement_month" string="Involvement Months" context="{'group_by': 'effective_time'}"/>
                    <filter name="involvment_year" string="Involvement Years" context="{'group_by': 'effective_time:year'}"/>
                    <filter name="nationality" string="Nationality" context="{'group_by': 'nationality_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="add_filter_from_invovlement_action" model="ir.actions.act_window">
        <field name="name">Add Filter To Distribution List</field>
        <field name="view_mode">form</field>
        <field name="src_model">virtual.partner.involvement</field>
        <field name="res_model">distribution.list.add.filter</field>
        <field name="multi" eval="1" />
        <field name="target">new</field>
        <field name="view_id" ref="distribution_list.distribution_list_add_filter" />
        <field name="binding_model_id" ref="mozaik_virtual_partner_instance.model_virtual_partner_involvement" />
        <field name="groups_id"
               eval="[(6, 0, [ref('mozaik_communication.res_groups_communication_user')])]" />
    </record>

    <record id="virtual_partner_involvement_action" model="ir.actions.act_window">
        <field name="name">Partners/Involvements</field>
        <field name="res_model">virtual.partner.involvement</field>
        <field name="view_mode">tree</field>
        <field name="search_view_id" ref="virtual_partner_involvement_search_view" />
        <field name="view_id" ref="virtual_partner_involvement_tree_view" />
    </record>
</odoo>
