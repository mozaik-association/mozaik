<odoo>

    <!-- Extra technical groups not belonging to Political Association application -->

    <record model="res.groups" id="res_groups_mozaik_base">
        <field name="name">Base (Mozaik)</field>
        <field name="category_id" ref="base.module_category_usability"/>
        <field name="implied_ids" eval="[(6, 0, [
                ref('base.group_user'),
                ref('base.group_no_one'),
            ])]" />
    </record>

    <record model="res.groups" id="res_groups_mozaik_developer">
        <field name="name">Developer (Mozaik)</field>
        <field name="category_id" ref="base.module_category_usability"/>
        <field name="implied_ids" eval="[(6, 0, [
                ref('base.group_no_one'),
            ])]" />
    </record>

    <!-- Groups belonging to Political Association application -->

    <record model="res.groups" id="res_groups_mozaik_reader">
        <field name="name">Mozaik Reader</field>
        <field name="category_id" ref="base.module_category_political_association"/>
        <field name="implied_ids" eval="[(6, 0, [
                ref('res_groups_base'),
            ])]" />
    </record>

    <record model="res.groups" id="res_groups_mozaik_user">
        <field name="name">Mozaik User</field>
        <field name="category_id" ref="base.module_category_political_association"/>
        <field name="implied_ids" eval="[(6, 0, [
                ref('res_groups_mozaik_base'),
                ref('base.group_partner_manager'),
            ])]" />
    </record>

    <record model="res.groups" id="res_groups_mozaik_financial_user">
        <field name="name">Mozaik Financial User</field>
        <field name="category_id" ref="base.module_category_political_association"/>
        <field name="implied_ids" eval="[(6, 0, [
                ref('res_groups_mozaik_user'),
            ])]" />
    </record>

    <record model="res.groups" id="res_groups_mozaik_officer">
        <field name="name">Mozaik Officer</field>
        <field name="category_id" ref="base.module_category_political_association"/>
        <field name="implied_ids" eval="[(6, 0, [
                ref('res_groups_mozaik_reader'),
                ref('res_groups_mozaik_user'),
            ])]" />
    </record>

    <record model="res.groups" id="res_groups_mozaik_financial_manager">
        <field name="name">Mozaik Financial Manager</field>
        <field name="category_id" ref="base.module_category_political_association"/>
        <field name="implied_ids" eval="[(6, 0, [
                ref('res_groups_mozaik_financial_user'),
                ref('res_groups_mozaik_officer'),
            ])]" />
    </record>

    <record model="res.groups" id="res_groups_mozaik_vip_reader">
        <field name="name">Mozaik Vip Reader</field>
        <field name="category_id" ref="base.module_category_political_association"/>
        <field name="implied_ids" eval="[(6, 0, [
                ref('res_groups_mozaik_reader'),
            ])]" />
    </record>

    <record model="res.groups" id="res_groups_mozaik_manager">
        <field name="name">Mozaik Manager</field>
        <field name="category_id" ref="base.module_category_political_association"/>
        <field name="implied_ids" eval="[(6, 0, [
                ref('res_groups_mozaik_vip_reader'),
                ref('res_groups_mozaik_officer'),
            ])]" />
    </record>

    <record model="res.groups" id="res_groups_mozaik_configurator">
        <field name="name">Mozaik Configurator</field>
        <field name="category_id" ref="base.module_category_political_association"/>
        <field name="implied_ids" eval="[(6, 0, [
                ref('res_groups_mozaik_manager'),
            ])]" />
    </record>

    <!-- Admin is a Configurator -->

    <record model="res.users" id="base.user_root">
        <field name="groups_id" eval="[
                (4, ref('res_groups_mozaik_configurator')),
            ]" />
    </record>

</odoo>
