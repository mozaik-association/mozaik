<odoo>
    <record id="virtual_partner_instance_tree_view" model="ir.ui.view">
        <field name="name">virtual.partner.instance.tree</field>
        <field name="model">virtual.partner.instance</field>
        <field name="inherit_id" ref="mozaik_communication.abstract_virtual_model_tree_view"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <field name="int_instance_id" position="after">
                <field name="membership_state_id" />
            </field>
            <field name="lang" position="after">
                <field name="is_donor"/>
                <field name="is_volunteer"/>
            </field>
        </field>
    </record>

    <record id="virtual_partner_instance_search_view" model="ir.ui.view">
        <field name="name">virtual.partner.instance.search</field>
        <field name="model">virtual.partner.instance</field>
        <field name="arch" type="xml">
            <search>
                <field name="identifier" />
                <!-- pylint: disable=duplicate-xml-fields -->
                <field string="Birth Date > ..." name="birth_date"
                       filter_domain="[('birth_date','>',self)]" />
                <field string="Birth Date &lt; ..." name="birth_date"
                       filter_domain="[('birth_date','&lt;',self)]" />

                <field name="partner_id" />
                <field name="int_instance_id" />
                <field name="int_instance_id" string="Internal Instance descending of..." operator="child_of"/>
                <field name="int_instance_id" string="Internal Instance not descending of..." operator="not child_of"/>
                <field name="membership_state_id" />

                <field name="interest_ids" widget="many2one" />
                <field name="competency_ids" string="Competencies &amp; Topics" widget="many2one" />

                <field name="email_category_id" />
                <field name="postal_category_id" />
                <field name="nationality_id"/>
                <field name="lang"/>

                <filter string="Main Address" name="main_postal"
                        domain="[('main_postal','=',1)]" />
                <separator />
                <filter string="Main Email" name="main_email"
                        domain="[('main_email','=',1)]" />
                <separator />
                <filter string="Natural Persons" name="type_person"
                        domain="[('is_company','=',0)]" />
                <filter string="Legal Persons" name="type_company"
                        domain="[('is_company','!=',0)]" />
                <separator />
                <filter string="Male" name="male" domain="[('gender','=','male')]" />
                <filter string="Female" name="female" domain="[('gender','=','female')]" />
                <separator />
                <filter string="Donor" name="donor"
                        domain="[('is_donor','=',True)]" />
                <separator />
                <filter string="Volunteer" name="volunteer"
                        domain="[('is_volunteer','=',True)]" />
                <separator />
                <filter string="Employee" name="employee"
                        domain="[('employee','!=',0)]" />
                <filter string="Not Employee" name="not_employee"
                        domain="[('employee','=',0)]" />
                <separator/>
                <filter string="Local Voluntary"
                        name="local_voluntary"
                        domain="[('local_voluntary','=', True)]" />
                <filter string="Regional Voluntary"
                        name="regional_voluntary"
                        domain="[('regional_voluntary','=', True)]" />
                <filter string="National Voluntary"
                        name="national_voluntary"
                        domain="[('national_voluntary','=', True)]" />
                <filter string="Non Local Voluntary"
                        name="non_local_voluntary"
                        domain="[('local_voluntary','=', False)]" />
                <filter string="Non Regional Voluntary"
                        name="non_regional_voluntary"
                        domain="[('regional_voluntary','=', False)]" />
                <filter string="Non National Voluntary"
                        name="non_national_voluntary"
                        domain="[('national_voluntary','=', False)]" />
                <separator/>
                <filter string="Local Only"
                        name="local_only"
                        domain="[('local_only','=', True)]" />
                <filter string="Not Local Only"
                        name="not_local_only"
                        domain="[('local_only','=', False)]" />
                <separator />
                <filter name="p_vip" string="VIP Address"
                        domain="[('postal_vip','=',True)]" groups="mozaik_base.mozaik_res_groups_vip_reader" />
                <separator />
                <filter name="e_vip" string="VIP Email"
                        domain="[('email_vip','=',True)]" groups="mozaik_base.mozaik_res_groups_vip_reader" />
                <separator />
                <filter name="p_unauthorized" string="Unauthorized Address"
                        domain="[('postal_unauthorized','=',True)]" />
                <separator />
                <filter name="e_unauthorized" string="Unauthorized Email"
                        domain="[('email_unauthorized','=',True)]" />
                <separator />
                <filter name="without_coordinate" string="Without Coordinate"
                        domain="[('active','=',False)]" />
                <group name="group_by">
                    <filter name="partner" string="Partner" context="{'group_by':'partner_id'}" />
                    <filter name="int_instance" string="Internal Instance" context="{'group_by':'int_instance_id'}" />
                    <filter name="state" string="State" context="{'group_by':'membership_state_id'}" />
                    <filter name="nationality" string="Nationality" context="{'group_by': 'nationality_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="add_filter_from_instance_action" model="ir.actions.act_window">
        <field name="name">Add Filter To Distribution List</field>
        <field name="view_mode">form</field>
        <field name="src_model">virtual.partner.instance</field>
        <field name="res_model">distribution.list.add.filter</field>
        <field name="multi" eval="1" />
        <field name="target">new</field>
        <field name="view_id" ref="distribution_list.distribution_list_add_filter" />
        <field name="binding_model_id" ref="mozaik_virtual_partner_instance.model_virtual_partner_instance" />
        <field name="groups_id"
               eval="[(6, 0, [ref('mozaik_communication.res_groups_communication_user')])]" />
    </record>

    <record id="virtual_partner_instance_action" model="ir.actions.act_window">
        <field name="name">Partners/Instances</field>
        <field name="res_model">virtual.partner.instance</field>
        <field name="view_mode">tree</field>
        <field name="search_view_id" ref="virtual_partner_instance_search_view" />
        <field name="view_id" ref="virtual_partner_instance_tree_view" />
    </record>
</odoo>
