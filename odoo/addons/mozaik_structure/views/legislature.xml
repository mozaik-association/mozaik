<?xml version='1.0' encoding='UTF-8' ?>
<odoo>

    <record id="legislature_search_view" model="ir.ui.view">
        <field name="name">legislature.search</field>
        <field name="model">legislature</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="power_level_id" />
                <field name="start_date" />

                <filter name="expired" string="Expired"
                    context="{'invisible_expire_date': False}"
                    domain="[('active','=',False)]" help="Expired Legislatures" />
                <filter name="all" string="All"
                    context="{'invisible_expire_date': False}"
                    domain="['|', ('active', '=', True), ('active', '!=', True)]" help="All Legislatures, expired or not" />

                <group expand="0" string="Group By..." name="group_by">
                    <filter name="level" string="Power Level" domain="[]" context="{'group_by':'power_level_id'}" />
                    <filter name="year" string="Year" domain="[]" context="{'group_by':'start_date:year'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="legislature_tree_view" model="ir.ui.view">
        <field name="name">legislature.tree</field>
        <field name="model">legislature</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="power_level_id"/>
                <field name="start_date"/>
                <field name="deadline_date"/>
                <field name="expire_date" invisible="context.get('invisible_expire_date', True)" />
            </tree>
        </field>
    </record>

    <record id="legislature_form_view" model="ir.ui.view">
        <field name="name">legislature.form</field>
        <field name="model">legislature</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <div attrs="{'invisible': ['|',('id','=',False),('active','=',False)]}"
                         invisible="context.get('popup')"
                         groups="mozaik_base.mozaik_res_groups_configurator">
                        <button name="action_invalidate" string="Invalidate" type="object"
                                confirm="Invalidate legislature: proceed anyway?" />
                    </div>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <div class="oe_right oe_button_box" name="buttons" invisible="context.get('popup')">
                        <button string="Electoral Districts" name="%(electoral_district_action)d"
                            type="action" attrs="{'invisible': [('id','=',False)]}"
                            context="{'search_default_power_level_id': power_level_id,}" />
                    </div>

                    <group>
                        <group  name="Power Level">
                            <field name="power_level_id"/>
                        </group>
                        <group name="Dates">
                            <field name="election_date" />
                            <field name="start_date" />
                            <field name="deadline_date" />
                        </group>
                    </group>

                    <group name="status" attrs="{'invisible': [('id','=',False)]}">
                        <group name="validity">
                            <field name="create_date"/>
                            <field name="expire_date" attrs="{'invisible': [('active','=',True)]}" />
                        </group>
                        <group name="other">
                        </group>
                    </group>

                </sheet>
                <div name="dev" class="oe_form_sheetbg" groups="mozaik_base.res_groups_developper">
                    <div class="oe_formview oe_form_sheet_width">
                        <h3>More Info</h3>
                        <div attrs="{'invisible': ['|',('id','=',False),('active','=',True)]}">
                            <button name="action_revalidate" string="Validate" type="object"
                                    confirm="Reactivate document: proceed anyway?" />
                        </div>
                        <group name="moreinfo">
                            <field name="id"/>
                            <field name="active"/>
                        </group>
                    </div>
                </div>
                <div name="chat" class="oe_chatter" invisible="context.get('popup')">
                    <field name="message_follower_ids" widget="mail_followers" groups="mozaik_base.mozaik_res_groups_configurator"/>
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="legislature_action" model="ir.actions.act_window">
        <field name="name">Legislatures</field>
        <field name="res_model">legislature</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="legislature_search_view" />
        <field name="view_id" ref="legislature_tree_view" />
    </record>

</odoo>
