<?xml version='1.0' encoding='UTF-8' ?>
<odoo>

    <record id="int_power_level_form_view" model="ir.ui.view">
        <field name="name">int.power.level.form</field>
        <field name="model">int.power.level</field>
        <field name="inherit_id" ref="abstract_power_level_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/div[@name='buttons']" position="inside">
                <button string="Instances" name="%(int_instance_action)d"
                            type="action" attrs="{'invisible': [('id','=',False)]}"
                            context="{'search_default_power_level_id': active_id,
                                      'default_power_level_id': active_id}" />
            </xpath>
            <xpath expr="//group[@name='Data']" postion="after">
                <field name="level_for_followers"/>
            </xpath>
            <xpath expr="//field[@name='assembly_category_ids']" position="attributes">
                <attribute name="context" translation="off">{'default_power_level_id': active_id}</attribute>
            </xpath>
            <xpath expr="//field[@name='assembly_category_ids']" position="before">
                <button string="All Details"
                                name="%(int_assembly_category_action)d"
                                type="action"
                                context="{'search_default_power_level_id': active_id,
                                          'default_power_level_id': active_id,
                                          'search_default_all': True}"/>
            </xpath>
        </field>
    </record>

    <record id="int_power_level_action" model="ir.actions.act_window">
        <field name="name">Internal Power Levels</field>
        <field name="res_model">int.power.level</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="abstract_power_level_search_view" />
        <field name="view_id" ref="abstract_power_level_tree_view" />
    </record>

</odoo>
