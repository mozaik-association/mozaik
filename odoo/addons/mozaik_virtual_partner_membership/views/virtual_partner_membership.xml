<odoo>
    <record id="virtual_partner_relation_tree_view" model="ir.ui.view">
        <field name="name">virtual.partner.involvement.tree</field>
        <field name="model">virtual.partner.involvement</field>
        <field name="inherit_id" ref="mozaik_communication.abstract_virtual_target_tree_view"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <field name="int_instance_id" position="after">
                <field name="membership_state_id"/>
                <field name="del_mem_card_date"/>
            </field>
            <field name="tongue" position="after">
                <field name="is_donor"/>
                <field name="is_volunteer"/>
            </field>
        </field>
    </record>

    <record id="virtual_partner_membership_search_view" model="ir.ui.view">
        <field name="name">virtual.partner.membership.search</field>
        <field name="model">virtual.partner.membership</field>
        <field name="arch" type="xml">
            <search string="Partners/Membership">
                <field name="identifier" />
                <field string="Birth Date > ..." name="birth_date"
                       filter_domain="[('birth_date','>',self)]" />
                <field string="Birth Date &lt; ..." name="birth_date"
                       filter_domain="[('birth_date','&lt;',self)]" />

                <field name="partner_id" />
                <field name="int_instance_id" />
                <field name="int_instance_id" string="Internal Instance descending of..." operator="child_of"/>
                <field name="int_instance_id" string="Internal Instance not descending of..." operator="not child_of"/>
                <field name="membership_state_id" />

                <field string="Welcome Documents Sent Date > ..." name="del_doc_date"
                       filter_domain="[('del_doc_date','>',self)]" />
                <field string="Welcome Documents Sent Date &lt; ..." name="del_doc_date"
                       filter_domain="[('del_doc_date','&lt;',self)]" />
                <field string="Member Card Sent Date > ..." name="del_mem_card_date"
                       filter_domain="[('del_mem_card_date','>',self)]" />
                <field string="Member Card Sent Date &lt; ..." name="del_mem_card_date"
                       filter_domain="[('del_mem_card_date','&lt;',self)]" />

                <field name="interests_m2m_ids" widget="many2one" />
                <field name="competencies_m2m_ids" widget="many2one" />

                <filter string="Undelivered Welcome Documents"
                        name="del_doc_date"
                        domain="[('del_doc_date','=', False),
                                 ('membership_state_id.code','in', ['member_candidate','supporter'])]" />
                <separator/>
                <filter string="Undelivered Member Cards"
                        name="del_mem_card_date"
                        domain="[('del_mem_card_date','=', False),
                                 ('membership_state_id.code','=', 'member')]" />
                <separator/>
                <filter string="Awaiting payment" name="awaiting_payment"
                        domain="[('reference','!=', False)]"/>
                <separator />
                <filter string="Members"
                        name="member"
                        domain="[('membership_state_id.code','=', 'member')]" />
                <separator />
                <filter string="Male" name="male"
                        domain="[('gender','=','m')]" />
                <filter string="Female" name="female"
                        domain="[('gender','=','f')]" />
                <separator />
                <filter string="French" name="french"
                        domain="[('tongue','=','f')]" />
                <filter string="German" name="german"
                        domain="[('tongue','=','g')]" />
                <separator />
                <filter string="Donor" name="donor"
                        domain="[('is_donor','=',True)]" />
                <separator />
                <filter string="Volunteer" name="volunteer"
                        domain="[('is_volunteer','=',True)]" />
                <separator />
                <filter string="Employee" name="employee"
                        domain="[('employee','!=',0)]" />
                <filter string="Not Employee" name="not_employee"
                        domain="[('employee','=',0)]" />
                <separator />
                <filter name="p_vip" string="VIP Address"
                        domain="[('postal_vip','=',True)]" groups="mozaik_base.mozaik_res_groups_vip_reader" />
                <separator />
                <filter name="e_vip" string="VIP Email"
                        domain="[('email_vip','=',True)]" groups="mozaik_base.mozaik_res_groups_vip_reader" />
                <separator />
                <filter name="p_unauthorized" string="Unauthorized Address"
                        domain="[('postal_unauthorized','=',True)]" />
                <separator />
                <filter name="e_unauthorized" string="Unauthorized Email"
                        domain="[('email_unauthorized','=',True)]" />
                <separator />
                <filter name="without_coordinate" string="Without Coordinate"
                        domain="[('active','=',False)]" />

                <group expand="0" string="Group By..." name="group_by">
                    <filter name="partner" string="Partner" context="{'group_by':'partner_id'}" />
                    <filter name="int_instance" string="Internal Instance" context="{'group_by':'int_instance_id'}" />
                    <filter name="state" string="State" context="{'group_by':'membership_state_id'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- Add filter for Partners/Membership -->

    <record id="add_filter_from_membership_action" model="ir.actions.act_window">
        <field name="name">Add Filter To Distribution List</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="src_model">virtual.partner.membership</field>
        <field name="res_model">distribution.list.add.filter</field>
        <field name="multi" eval="1" />
        <field name="target">new</field>
        <field name="view_id"
               ref="distribution_list.distribution_list_add_filter" />
        <field name="groups_id"
               eval="[(6, 0, [ref('mozaik_base.mozaik_res_groups_user')])]" />
    </record>

    <record id="add_filter_from_membership_values" model="ir.values">
        <field name="name">Add Filter To Distribution List</field>
        <field name="model">virtual.partner.membership</field>
        <field name="key">action</field>
        <field name="key2">client_action_multi</field>
        <field name="value"
               eval="'ir.actions.act_window,%s' % ref('add_filter_from_membership_action')" />
    </record>

    <!-- Action -->

    <record id="virtual_partner_membership_action" model="ir.actions.act_window">
        <field name="name">Partners/Membership</field>
        <field name="res_model">virtual.partner.membership</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="search_view_id" ref="virtual_partner_membership_search_view" />
        <field name="view_id" ref="virtual_partner_membership_tree_view" />
    </record>
</odoo>
