<odoo>
    <record model="ir.ui.view" id="partner_exclusion_form_view">
        <field name="name">partner.exclusion.form (in mozaik_membership)</field>
        <field name="model">partner.exclusion</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <span colspan="2">Close every active subscriptions and exclude selected partners</span>
                </group>
                <footer>
                    <button string="Exclude" name="action_exclude" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="res_partner_exclusion_action" model="ir.actions.act_window">
        <field name="name">Partner exclusion</field>
        <field name="view_mode">form</field>
        <field name="src_model">res.partner</field>
        <field name="res_model">partner.exclusion</field>
        <field name="target">new</field>
        <field name="view_id" ref="partner_exclusion_form_view"/>
        <field name="binding_model_id" ref="mozaik_membership.model_res_partner"/>
    </record>
</odoo>