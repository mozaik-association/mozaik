<odoo>

    <record model="ir.ui.view" id="failure_editor_form_view">
        <field name="name">failure.editor.form (in mozaik_coordinate)</field>
        <field name="model">failure.editor</field>
        <field name="arch" type="xml">
            <form string="Failure Editor">
                <group>
                    <field name="increase" />
                    <field name="description" />
                </group>
                <footer>
                    <button name="update_failure_data" string="Apply" type="object"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

</odoo>
