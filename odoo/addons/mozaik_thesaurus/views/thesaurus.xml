<?xml version='1.0' encoding='UTF-8' ?>
<odoo noupdate="0">

    <record id="thesaurus_tree_view" model="ir.ui.view">
        <field name="name">thesaurus.tree</field>
        <field name="model">thesaurus</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="thesaurus_form_view" model="ir.ui.view">
        <field name="name">thesaurus.form</field>
        <field name="model">thesaurus</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <div attrs="{'invisible': ['|',('id','=',False),('active','=',False)]}">
                    </div>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive"
                                confirm="Archive/reactivate thesaurus: proceed anyway?"
                                groups="mozaik_abstract_model.res_groups_archiving_manager">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                        </button>
                    </div>
                    <div class="oe_title" name="title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>

                    <group name="status"
                        attrs="{'invisible': [('id','=',False)]}">
                        <group name="validity">
                            <field name="create_date" />
                            <field name="expire_date"
                                attrs="{'invisible': [('active','=',True)]}" />
                        </group>
                        <group name="other">
                        </group>
                    </group>

                    <notebook>
                        <page string="More Info" name="dev" groups="base.group_erp_manager">
                            <group name="moreinfo">
                            <field name="new_thesaurus_term_id" />
                            </group>
                        </page>
                    </notebook>

                </sheet>
                <div name="chat" class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="mozaik_abstract_model.res_groups_follower_manager" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="thesaurus_action" model="ir.actions.act_window">
        <field name="name">Thesaurus</field>
        <field name="res_model">thesaurus</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="thesaurus_tree_view" />
    </record>

</odoo>
