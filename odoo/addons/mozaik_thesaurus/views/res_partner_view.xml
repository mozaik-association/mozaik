<odoo noupdate="0">

    <record id="res_partner_search_view" model="ir.ui.view">
        <field name="name">res.partner.search (mozaik_thesaurus)</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="competency_ids" string="Competencies &amp; Topics" widget="many2one"/>
                <field name="interest_ids" invisible="context.get('default_is_company', True)" widget="many2one"/>
            </xpath>
        </field>
    </record>

    <record id="res_partner_form_view" model="ir.ui.view">
        <field name="name">res.partner.form (mozaik_thesaurus)</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="index" string="Indexation">
                    <separator string="Competencies" attrs="{'invisible': [('is_company','=',True)]}"/>
                    <separator string="Topics" attrs="{'invisible': [('is_company','=',False)]}"/>
                    <field name="competency_ids"/>
                    <separator string="Interests" attrs="{'invisible': [('is_company','=',True)]}"/>
                    <field name="interest_ids" attrs="{'invisible': [('is_company','=',True)]}"/>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
