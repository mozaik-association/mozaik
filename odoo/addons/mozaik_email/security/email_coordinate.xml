<odoo>

    <record model="ir.model.access" id="email_coordinate_access_user_r">
        <field name="name">email.coordinate all R</field>
        <field name="model_id" ref="model_email_coordinate"/>
        <field name="group_id" ref="mozaik_coordinate.res_groups_coordinate_reader"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <record model="ir.model.access" id="email_coordinate_access_user_cud">
        <field name="name">email.coordinate user CUD</field>
        <field name="model_id" ref="model_email_coordinate"/>
        <field name="group_id" ref="mozaik_coordinate.res_groups_coordinate_user"/>
        <field name="perm_read" eval="0"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="email_coordinate_reader_rule" model="ir.rule">
        <field name="name">Email Coordinate for Coordinate Reader</field>
        <field name="model_id" ref="model_email_coordinate"/>
        <field name="domain_force">[('vip','=',False)]</field>
        <field name="groups" eval="[(6, 0, [
            ref('mozaik_coordinate.res_groups_coordinate_reader'),
        ])]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <record id="email_coordinate_vip_reader_rule" model="ir.rule">
        <field name="name">Email Coordinate for VIP Reader</field>
        <field name="model_id" ref="model_email_coordinate"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(6, 0, [ref('mozaik_coordinate.res_groups_coordinate_vip_reader')])]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <record id="email_coordinate_user_rule" model="ir.rule">
        <field name="name">Email Coordinate for Coodinate User</field>
        <field name="model_id" ref="model_email_coordinate"/>
        <field name="domain_force">[('vip','=',False)]</field>
        <field name="groups" eval="[(6, 0, [ref('mozaik_coordinate.res_groups_coordinate_user')])]"/>
        <field name="perm_read" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="email_coordinate_vip_rule" model="ir.rule">
        <field name="name">Email Coordinate for VIP User</field>
        <field name="model_id" ref="model_email_coordinate"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(6, 0, [ref('mozaik_coordinate.res_groups_coordinate_vip_user')])]"/>
        <field name="perm_read" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

</odoo>
