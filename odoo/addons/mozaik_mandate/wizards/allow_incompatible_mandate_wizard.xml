<odoo>

    <record model="ir.ui.view" id="allow_incompatible_mandate_wizard_form_view">
        <field name="name">allow.incompatible.mandate.wizard.form (in mozaik_mandate)</field>
        <field name="model">allow.incompatible.mandate.wizard</field>
        <field name="inherit_id" ref="mozaik_duplicate.allow_duplicate_form_view" />
        <field name="priority" eval="100"/>
        <field name="arch" type="xml">
            <xpath expr="//strong" position="replace">
                <strong>
                Selected mandates are compatible. Are you sure?
                </strong>
            </xpath>
        </field>
    </record>

    <record model="ir.actions.act_window" id="allow_incompatible_mandate_wizard_act_window">
        <field name="name">Allow Incompatible Mandate</field>
        <field name="res_model">allow.incompatible.mandate.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="mozaik_mandate.model_generic_mandate" />
        <field name="groups_id" eval="[(6, 0, [ref('mozaik_mandate.res_groups_mandate_user')])]" />
        <field name="context">{'multi_model': True, 'model_id_name': 'mandate_id'}</field>
    </record>

</odoo>
