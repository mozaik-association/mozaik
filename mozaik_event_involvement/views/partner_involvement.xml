<odoo>

    <record model="ir.ui.view" id="partner_involvement_form_view">
        <field
            name="name"
        >partner.involvement.form (in mozaik_event_involvement)</field>
        <field name="model">partner.involvement</field>
        <field
            name="inherit_id"
            ref="mozaik_involvement.partner_involvement_form_view"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='involvement_type']" position="after">
                <field
                    name="question_event_id"
                    attrs="{'invisible': [('question_event_id', '=', False)]}"
                />
            </xpath>
        </field>
    </record>



</odoo>
